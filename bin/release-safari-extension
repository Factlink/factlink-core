#!/bin/bash

#abort this script on any error:
set -e
sfextfile=$1
sfuptfile=$2

if [ ! -f "$sfextfile" ]; then
  echo "First argument must be the file of the safari extension (factlink.safariextz)"
  exit 1
fi

if [ ! -f "$sfuptfile" ]; then
  echo "Second argument must be the file of the safari update file (factlink-safari.plist)"
  echo "Don't forget to bump the version number"
  exit 1
fi

scp $sfextfile deploy@static.factlink.com:/applications/firefox-extension/shared/releases/factlink.safariextz
scp $sfuptfile deploy@static.factlink.com:/applications/firefox-extension/shared/releases/factlink-safari.plist
