<div id="channel">
  <header class="title">
    <h1 class="channel-title">
      {{ long_title }}
    </h1>

    <div class="button-wrap">
      {{#editable?}}
      <a href="{{ edit_link }}" class="btn edit btn-micro">edit</a>
      {{/editable?}}

      <div class="add-to-channel-region"></div>

      {{#has_authority?}}
      <div class="authority">
        <img src="{{global.brain_image}}">
        <span>{{created_by_authority}}</span>
      </div>
      {{/has_authority?}}
    </div>

    <div class="clearfix"></div>

  </header>

  <div id="facts_for_channel">

  </div>

  <div id="activity_for_channel">

  </div>
</div>
