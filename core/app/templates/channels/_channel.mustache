<div id="channel" data-channel-id="{{ id }}">
  <header class="append-bottom title">
    <h1>
      {{ long_title }}
    </h1>

    <div class="button-wrap">
      {{#editable?}}
      <a href="{{ edit_link }}" class="btn edit small">edit</a>
      {{/editable?}}

      {{#followable?}}
      <a class="btn btn-mini" id="add-to-channel">
        <i class="icon-plus"></i>
        {{add_to_channels_definition}}
      </a>
      <div class="float-box channel-listing" id="follow-channel"></div>
      {{/followable?}}

      {{#has_authority?}}
      <div class="authority">
        {{{brain_icon}}}
        <span>{{created_by_authority}}</span>
      </div>
      {{/has_authority?}}
    </div>

    {{#inspectable?}}
    <div id="contained-channels">
      <span class="contained-channel-description">Followed {{channels_definition}}</span>
        <ul id="contained-channel-list" {{^is_mine}}class="not_my_channel"{{/is_mine}}>
          <div class="overflow"></div>
        </ul>
      </div>
      <div class="more"><a id="more-button"><span class="label">more</span></a></div>
    {{/inspectable?}}

    <div class="clearfix"></div>

    <div class="tabs">
      <ul>
        <li class="factlinks"><a href="{{{link}}}" rel="backbone">Recent</a></li>
        {{#discover_stream?}}
          <li class="activity"><a href="{{{activities_link}}}" rel="backbone">Activity</a></li>
        {{/discover_stream?}}
        {{#is_normal}}
          <li class="activity"><a href="{{{activities_link}}}" rel="backbone">Discovery</a></li>
        {{/is_normal}}
      </ul>
    </div>

  </header>

  <div id="facts_for_channel">

  </div>

  <div id="activity_for_channel">

  </div>
</div>
