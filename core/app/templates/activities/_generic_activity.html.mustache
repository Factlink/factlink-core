<article class="list-block">
  <div class="user-avatar">
    {{{ activity.avatar }}}
  </div>

  <div class="activity-container">
    <span class="body">
      <a href="{{ activity.user_profile_url }}">{{ activity.username }}</a> {{ activity.action }} <a href="{{ activity.channel_owner_profile_url }}">{{ activity.subject }}</a>
    </span>
    <span class="meta channel">{{{ activity.icon }}} {{ time_ago }}</span>
  </div>
</article>