<div class="fact-new">
  <div class="fact-new-fact">
    <div class="fact-wheel"></div>

    <div class="fact-new-body">
      {{fact_text}}
    </div>
  </div>

  {{#global.signed_in}}
    <div class="fact-new-topics-container">
      <strong class="fact-new-topics-header">{{add_to_topic_header}}?</strong>
      <div class="js-add-to-channels"></div>

      <div class="js-region-suggested-topics"></div>
    </div>

    <div class="fact-new-buttons">
      <button class="button button-confirm js-submit-post-factlink fact-new-submit">Post to Factlink</button>

      <div class="js-region-share-new-fact fact-new-share"></div>

      <div class="js-finish-popover fact-new-finish-popover"></div>
    </div>
  {{/global.signed_in}}
</div>

<div class="js-learn-more-region learn-more-container"></div>
