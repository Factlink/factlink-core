<div class="fact-new">
  <div class="fact-new-fact">
    {{#guided}}
      <div class="js-opinion-animation" style="position:absolute"><img src="{{global.opinion_animation}}" alt="" /></div>
    {{/guided}}
    <textarea name="fact" class="js-fact">{{fact_text}}</textarea>
    <input type='hidden' class="js-url" name="url" value="{{url}}">
    <input type='hidden' class="js-title" name="title" value="{{title}}">

    <div class="fact-wheel"></div>

    <div class="fact-new-body">
      {{fact_text}}
    </div>
  </div>

  {{#global.signed_in}}
    <div class="add-to-topic-container">
      <strong class="add-to-topic-header">{{add_to_topic_header}}?</strong>
      <div class="js-add-to-channels"></div>

      <div class="js-region-suggested-topics"></div>
    </div>

    <div class="buttons">
      <button class="button button-confirm js-submit-post-factlink submit-post-factlink" data-disable-with="Posting..." name="commit" type="submit">Post to Factlink</button>

      <div class="js-region-share-new-fact post-factlink-share"></div>

      <div class="js-finish-popover finish-popover"></div>
    </div>
  {{/global.signed_in}}
</div>
