<article class="fact" data-fact-id="{{fact.id}}" >
  {{>fact_wheel}}
	<header>

	  <span id="title-{{fact.id}}" class="head {{editable_title_class}}">{{fact.data.title}}</span>

		<span class="body">
      {{{link}}} &mdash; <span>{{{scroll_to_link}}}</span><br>
    </span>
    <sub>{{{last_activity}}}</sub>
		{{#user_signed_in?}}
		  <div class="actions">
		    <ul>
			    <li><a href="#" class="add-to-channel"><img src="/images/bookmark.gif">Channels</a></li>
			    {{#i_am_fact_owner}}
			      <li>{{{delete_link}}}</li>
			    {{/i_am_fact_owner}}
		    </ul>
		  </div>
      <div class="float-box channel-listing">
		  </div>
	  {{/user_signed_in?}}

	</header>
</article>
