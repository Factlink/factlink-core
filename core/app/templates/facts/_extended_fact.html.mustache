<header class="append-bottom title" id="single-factlink-header">
  <span class="header-wrap">
    <a class="site" href="{{{proxy_scroll_url}}}" target="_blank">{{pretty_url}}</a>
    <span class="title">{{fact_title}}</span>
  </span>

  <div class="clearfix"></div>
</header>

<div class="row" id="extended_factlink">
  <div class="span8 fact-block">
    <article class="fact" data-fact-id="{{id}}">
      {{#fact_wheel}}
        {{>fact_wheel}}
      {{/fact_wheel}}
    	<header class="fact-body">
    	  <span id="title-{{id}}" class="head {{editable_title_class}}">{{fact_title}}</span>

    		<div>
          <h2>{{{displaystring}}}</h2>
          <span class="scroll-to-container">
            {{#scroll_to_link}}
              &mdash; {{{scroll_to_link}}}
            {{/scroll_to_link}}
          </span>
        </div>

        <sub>Created by <a href="{{{created_by_url}}}">{{created_by}}</a> {{created_by_ago}}</sub>
    	</header>

    	<ul>
    	  <li class="agree">
    	    <h6>{{believers_text}}</h6>
    	    <div>{{believers_count}}</div>
    	  </li>
    	  <li class="disagree">
    	    <h6>{{disbelievers_text}}</h6>
    	    <div>{{disbelievers_count}}</div>
    	  </li>
    	  <li class="unsure">
    	    <h6>{{doubters_text}}</h6>
    	    <div>{{doubters_count}}</div>
    	  </li>
    	  <li class="interacting">
    	    <h6>People that interacted</h6>
    	    <div>
            {{#interacting_users}}
              {{>interacting_users}}
            {{/interacting_users}}
    	    </div>
    	  </li>
    	  <li class="last authority">
    	    <h6>Your authority here</h6>
    	    <div>
    	      <img src="/assets/brain.png">
    	      <span>{{users_authority}}</span>
    	    </div>
    	  </li>
    	</ul>
    </article>

    <h3>Evidence</h3>
    <div class="controls">
      <ul class="evidence">
        <li class="supporting">
          <a class="tab">Supporting{{#nr_of_supporting_facts}} ({{nr_of_supporting_facts}}){{/nr_of_supporting_facts}}</a>
        </li>

        <li class="weakening">
          <a class="tab">Weakening{{#nr_of_weakening_facts}} ({{nr_of_weakening_facts}}){{/nr_of_weakening_facts}}</a>
        </li>

    		{{#signed_in?}}
          <li class="add-to-channel">
            <a>{{channels_definition}}</a>
            <div class="float-box channel-listing">
            </div>
          </li>
    		{{/signed_in?}}

        {{#i_am_owner}}
          <li class="destroy">
            <a></a>
          </li>
        {{/i_am_owner}}

      </ul>
    </div>


    <div class="dropdown-container">
    </div>
  </div>
</div>