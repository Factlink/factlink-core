<header class="append-bottom title" id="single-factlink-header">
  <span class="header-wrap">
    <a class="site" href="{{{proxy_scroll_url}}}" target="_blank">{{pretty_url}}</a>
    <span class="title">{{fact_title}}</span>
  </span>

  <div class="clearfix"></div>
</header>

<div class="row" id="extended_factlink">
  <div class="span8 fact-block">
    <article class="fact" data-fact-id="{{id}}">
      <div class="wheel">
        {{#fact_wheel}}
          {{>fact_wheel}}
        {{/fact_wheel}}
      </div>
      <header class="fact-body">
        <p class="head title{{#can_edit?}} owner edit{{/can_edit?}}">
          <span>{{fact_title}}</span>
          <input type="text" value="{{fact_title}}">
        </p>

        <div>
          <h2 class="normal">
            {{displaystring}}
            {{#big_displaystring?}}
              <a class="more">... (more)</a>
            {{/big_displaystring?}}
          </h2>
          <h2 class="full">
            {{full_displaystring}}
            <a class="less">(less)</a>
          </h2>
          <span class="scroll-to-container">
            {{#scroll_to_link}}
              &mdash; {{{scroll_to_link}}}
            {{/scroll_to_link}}
          </span>
        </div>

        <sub>Created by <a href="{{{created_by_url}}}">{{created_by}}</a> {{created_by_ago}}</sub>
      </header>

      <ul>
        <li class="agree">
          <h6>{{believers_text}}</h6>
          <div>{{believers_count}}</div>
        </li>
        <li class="disagree">
          <h6>{{disbelievers_text}}</h6>
          <div>{{disbelievers_count}}</div>
        </li>
        <li class="unsure">
          <h6>{{doubters_text}}</h6>
          <div>{{doubters_count}}</div>
        </li>
        <li class="interacting">
          <h6>People that interacted</h6>
          <div>
            {{#interacting_users}}
              {{>interacting_users}}
            {{/interacting_users}}
          </div>
        </li>
        <li class="last authority">
          <h6>Your authority</h6>
          <div>
            <img src="/assets/brain.png">
            <span>{{users_authority}}</span>
          </div>
        </li>
      </ul>
    </article>

    <h3>Evidence</h3>

    <ul class="tab-control">

      <!-- Evidence -->
      <li class="supporting alwaysshow"><a href="#">Supporting{{#nr_of_supporting_facts}} ({{nr_of_supporting_facts}}){{/nr_of_supporting_facts}}</a></li>
      <li class="weakening alwaysshow"><a href="#">Weakening{{#nr_of_weakening_facts}} ({{nr_of_weakening_facts}}){{/nr_of_weakening_facts}}</a></li>

      <!-- Destroy -->
      {{#i_am_owner}}
      <li class="destroy"><a></a></li>
      {{/i_am_owner}}

      <!-- Authority -->
      {{#my_authority}}
      <li class="authority"><div class="authority" rel="tooltip" title="Your authority on this Factlink"><img src="/assets/brain.png" alt="Brain" /><span>{{my_authority}}</span></div></li>
      {{/my_authority}}

      <!-- Channels -->
      {{#signed_in?}}
      <li class="add-to-channel alwaysshow"><a href="#">My Channels</a></li>
      {{/signed_in?}}

    </ul>

    <div class="tab-content" style="display: block;">
      <div class="supporting" style="display: none;">
        <div class="dropdown-container"></div>
      </div>

      <div class="weakening" style="display: none;">
        <div class="dropdown-container"></div>
      </div>

      <div class="add-to-channel" style="display: none;">
        <div class="dropdown-container">
          <div class="wrapper">
            <p>Add to a channel:</p>
            <div class="add-to-channel-container"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
