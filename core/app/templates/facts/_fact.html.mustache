{{#deletable_from_channel?}}
  <a class="close remove" rel="nofollow">&times;</a>
{{/deletable_from_channel?}}

{{#modal?}}
  <a class="close remove" rel="nofollow" onclick="parent.remote.hide();">&times;</a>
{{/modal?}}

{{#fact_bubble}}
  {{>fact_bubble}}
{{/fact_bubble}}

<div class="controls">
  <ul class="evidence">
    <li class="supporting">
      <a class="tab">Supporting{{#nr_of_supporting_facts}} ({{nr_of_supporting_facts}}){{/nr_of_supporting_facts}}</a>
    </li>

    <li class="weakening">
      <a class="tab">Weakening{{#nr_of_weakening_facts}} ({{nr_of_weakening_facts}}){{/nr_of_weakening_facts}}</a>
    </li>

		{{#signed_in?}}
    <li class="add-to-channel">
      <a>{{channels_definition}}</a>
      <div class="float-box channel-listing">
    </div>
    </li>
		{{/signed_in?}}

    {{#i_am_owner}}
    <li class="destroy">
      <a></a>
    </li>
    {{/i_am_owner}}

  </ul>
    {{#my_authority}}
    <div class="authority">
      <img src="/assets/brain.png" alt="Brain" />
      <span>{{my_authority}}</span>
    </div>
    {{/my_authority}}
    {{#interacting_users}}
      {{>interacting_users}}
    {{/interacting_users}}
  </ul>
</div>


<div class="dropdown-container">
</div>
