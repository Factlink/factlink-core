{{#deletable_from_channel?}}
  <a class="close remove" rel="nofollow">&times;</a>
{{/deletable_from_channel?}}

{{#modal?}}
  <a class="close remove" rel="nofollow" onclick="parent.remote.hide();">&times;</a>
{{/modal?}}

{{>fact_bubble}}

<div class="controls">
  <ul class="evidence">
    <li class="supporting">
      <a class="tab">Supporting</a>
      {{#signed_in?}} <a class="add-button"></a> {{/signed_in?}}
    </li>

    <li class="weakening">
      <a class="tab">Weakening</a>
      {{#signed_in?}}<a class="add-button"></a> {{/signed_in?}}
    </li>

		{{#signed_in?}}
      <li class="add-to-channel">
        <a>Channels</a>
        <div class="float-box channel-listing">
      </div>
      </li>
		{{/signed_in?}}
  </ul>
  <div class="users"></div>
</div>


<div class="dropdown-container">
  <div class="add-evidence-container">
    <div class="add-evidence supporting">
      <input type="text" placeholder="The Factlink above is true because ..."></input><a class="cancel">cancel</a>
    </div>
    <div class="add-evidence weakening">
      <input type="text" placeholder="The Factlink above is false because ..."></input><a class="cancel">cancel</a>
    </div>
  </div>
  <div class="arrow">
    <div class="arrow-down-border"></div>
    <div class="arrow-down"></div>
  </div>
</div>
