<article class="fact" data-fact-id="{{fact_id}}" >
  <div class="wheel">
    {{#fact_wheel}}
      {{>fact_wheel}}
    {{/fact_wheel}}
  </div>
  <header>
    <a class="title" href="{{{url}}}">{{fact_title}}</a>

    <span class="body">
      <span class="normal">
        {{displaystring}}
        {{#big_displaystring?}}
          <a class="more">... (more)</a>
        {{/big_displaystring?}}
      </span>
      <span class="full">
        {{full_displaystring}}
        <a class="less">(less)</a>
      </span>

      {{#scroll_to_link}}
        &mdash; <span>{{{scroll_to_link}}}</span>
      {{/scroll_to_link}}
      <br>
    </span>
  </header>
</article>
