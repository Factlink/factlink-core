<article class="fact" data-fact-id="{{fact_id}}" >
  <div class="wheel">
    {{#fact_wheel}}
      {{>fact_wheel}}
    {{/fact_wheel}}
  </div>
  <header>
    <a class="title" href="{{{url}}}" {{#modal?}}target="_blank"{{/modal?}}>{{fact_title}}</a>

    <span class="body">
      <span class="text">{{displaystring}}</span>
      <a class="less" style="display:none">(less)</a>

      {{#scroll_to_link}}
        &mdash; <span>{{{scroll_to_link}}}</span>
      {{/scroll_to_link}}
      <br>
    </span>
  </header>
</article>
