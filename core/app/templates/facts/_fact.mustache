<div class="top-right-arrow">
  <i><b class="caret"></b></i>
  <ul class="top-right">
    {{#deletable_from_channel?}}
      <li class="hide-from-channel">
        <a rel="nofollow">Hide Factlink from channel</a>
      </li>
    {{/deletable_from_channel?}}
    {{#i_am_owner}}
      <li class="delete">
        <a>
          <img src="/assets/trash.png" alt="Trash" class="normal">
          <img src="/assets/trash-hover.png" alt="Trash" class="hover">
          Delete Factlink...
        </a>
      </li>
    {{/i_am_owner}}
  </ul>
</div>

{{#modal?}}
  <a class="close" rel="nofollow" onclick="parent.remote.hide();" title="Close">&times;</a>
{{/modal?}}

{{#fact_bubble}}
  {{>fact_bubble}}
{{/fact_bubble}}

<ul class="tab-control">

  <li class="supporting {{#nr_of_supporting_facts}}alwaysshow{{/nr_of_supporting_facts}}"><a href="#">Supporting{{#nr_of_supporting_facts}} ({{nr_of_supporting_facts}}){{/nr_of_supporting_facts}}</a></li>
  <li class="weakening {{#nr_of_weakening_facts}}alwaysshow{{/nr_of_weakening_facts}}"><a href="#">Weakening{{#nr_of_weakening_facts}} ({{nr_of_weakening_facts}}){{/nr_of_weakening_facts}}</a></li>

  <li class="permalink">
    {{#modal?}}
    <a href="{{url}}" target="new"></a>
    {{/modal?}}
    {{^modal?}}
    <a href="{{url}}" target="_top"></a>
    {{/modal?}}
  </li>

  <li class="interacting-users hide">
    {{#interacting_users}}
      {{>interacting_users}}
    {{/interacting_users}}
  </li>

  {{#friendly_time}}
    <li class="timestamp">
      {{post_action}} {{ friendly_time }} ago
    </li>
  {{/friendly_time}}

  {{#signed_in?}}
    <li class="add-to-channel"><a href="#">My Channels</a></li>
  {{/signed_in?}}

</ul>

<div class="clearfix"></div>

<div class="tab-content" style="display: block;">

  <div class="supporting" style="display: none;">
    <div class="dropdown-container"></div>
  </div>

  <div class="weakening" style="display: none;">
    <div class="dropdown-container"></div>
  </div>

  <div class="add-to-channel" style="display: none;">
    <div class="dropdown-container">
      <span class="title">The Factlink above is in my following channels:</span>
      <div class="wrapper">
        <div class="add-to-channel-container"></div>
      </div>
    </div>
  </div>

</div>
