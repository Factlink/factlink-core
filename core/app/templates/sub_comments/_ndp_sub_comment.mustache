<div class="ndp-evidenceish-box">
  <div class="js-region-evidence-sub-comment-poparrow"></div>
  <div class="ndp-evidenceish-heading">
    <span class="heading-avatar">
      <img src="{{ creator.avatar_url_32 }}" height="32" width="32">
    </span>
    <a class="ndp-evidenceish-heading-link" href="/{{ creator.username }}" rel="backbone">
      {{ creator.name }}
    </a>
  </div>
  <div class="ndp-evidenceish-content">
    {{content}}
  </div>
  <div class="ndp-evidenceish-bottom">
    <span class="factlink-icon-time-small"></span>{{time_ago}} {{ global.t.ago }}
  </div>
</div>
