<div class="tour-follow-user-block">
  <div class="tour-follow-user-heading">
    <span class="tour-follow-user-avatar"><img src="{{avatar_url_32}}" /></span>
    {{name}}</div>
  <span class="tour-follow-topic-heading">
    Posts Factlinks about:
  </span>
  <ul>
    {{#user_topics}}
      <li><span class="tour-user-topic js-topic"><b>{{title}}</b> <span class="tour-follow-user-authority"><img src="{{global.brain_image}}"> {{formatted_authority}}</span></span></li>
    {{/user_topics}}
  </ul>
</div>


{{! TODO: use partial }}
<button class="btn btn-block js-action-button-primary">
  {{disabled_label}}
</button>

<button class="btn btn-block js-action-button-secondary" style="display:none">
  <span class="js-default-state">
    <img src="{{global.checkmark}}"></img>
    {{enabled_label}}
  </span>

  <span class="js-hover-state" style="display:none">
    <img src="{{global.unfollow}}"></img>
    {{disable_label}}
  </span>
</button>
