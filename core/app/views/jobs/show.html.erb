<% content_for :title do %>
  <%= @job.title %>
<% end %>


<% content_for :menu_items do %>
  <% @jobs.each do |job| %>
    <%  if (job.show) %>
      <li <%= job.id == @job.id ? "class='selected_menu_item'" : '' %>  >
         <a href="/pages/jobs/<%= job.id %>"><%= job.title %></a>
         <%#*#link_to job.title, pages_path(job)%>
      </li>
    <% end %>
  <% end %>
<% end %>


<% content_for :body_text do %>
  <h1> <%= @job.title %></h1>

  <%= simple_format(@job.content,sanitize: false) %>
  
  <% if can? :update, @job %>
    <div style="text-align:right">
      <%=link_to "Edit", edit_admin_job_path(@job)%>
    </div>
  <% end%>
<% end %>
  
  