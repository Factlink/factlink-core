<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>#sign ins</th>
    <th>last seen</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @user.username %></td>
      <td><%= @user.email %></td>
      <td>
        <% @class = case @user.sign_in_count
        when nil
          "important"
        when 0
          "important"
        when 1
          "warning"
        else
          "success"
        end %>
        <span class="label label-<%= @class %>"><%= @user.sign_in_count || 0 %></span>
      </td>
      <td><%= @user.current_sign_in_at %></td>
      <td><%= link_to "<i class=\"icon-edit glyphicon-sizing glyphicon-color\">".html_safe, edit_admin_user_path(@user.id) %></i></td>
    </tr>
  </tbody>
</table>
