<div style="margin-bottom: 12px;">
  <h1>Listing users</h1>

  <table class="table table-bordered">
    <thead>
    <tr>
      <th><%= sortable "username", "Username" %></th>
      <th><%= sortable "twitter", "Twitter" %></th>
      <th><%= sortable "email", "Email" %></th>
      <th><%= sortable "sign_in_count", "#sign ins" %></th>
      <th><%= sortable "last_sign_in_at", "last seen" %></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.twitter %></td>
      <td><%= user.email %></td>
      <td>
        <% @class = case user.sign_in_count
        when nil
          "important"
        when 0
          "important"
        when 1
          "warning"
        else
          "success"
        end %>
        <span class="label label-<%= @class %>"><%= user.sign_in_count || 0 %></span>
      </td>
      <td><%= user.current_sign_in_at %></td>
      <td><%= link_to "<i class=\"icon-edit\">".html_safe, edit_admin_user_path(user.id) %></i></td>
    </tr>
  <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'New User', new_admin_user_path, class: 'btn', style: "float: right;" %>