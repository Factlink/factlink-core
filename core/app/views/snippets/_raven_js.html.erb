<% sentry_conf = YAML::load_file(Rails.root.join('config/sentry.yml')).fetch(Rails.env,{})['ravenjs'] %>

<% if sentry_conf %>

  <script type="text/javascript">
  Raven.config('<%= "https://#{sentry_conf["public"]}@sentry2.factlink.com/#{sentry_conf["project_id"]}" %>', {

      ignoreErrors: [
        'Uncaught Error: Error connecting to extension gkndfifopckmhdkohjeoljlbfnjhekfg' // 1Password
      ]

      // Perhaps we also want to look at this list, but we should be careful about not logging extension errors: http://raven-js.readthedocs.org/en/latest/tips/index.html

  }).install();
  </script>

<% end %>
