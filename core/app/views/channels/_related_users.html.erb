<% content_for :right_column do %>

  <% if related_users && related_users.count > 0 %>
    <h1>Related users</h1>
    <sub>Here are some of the users who interacted with facts in this channel:</sub>

  <% else %>
    <h1>Interesting users</h1>
    <sub>Here are some of the users who might be of interest:</sub>
    <% related_users = GraphUser.top(5).map{|x| x.user} %>
  <% end %>

  <ul>
  <% related_users.andand.each do |related_user| %>
  	<%= render :partial => "home/snippets/user_li", :locals => {  :user => related_user } %>
  <% end %>
  </ul>

<% end %>