<% content_for :email_header do %>
  <h1 class="header-title">Hello <%= @resource.name %></h1>
  <h2 class="header-subtitle">Welcome to Factlink! Please confirm your email by clicking below.</h2>
<% end %>

<% content_for :email_body do %>

  <table class="button" align="center" border="0" cellpadding="0" cellspacing="0">
    <tr>
      <td class="button-inner">
        <%= link_to confirmation_url(@resource, :confirmation_token => @resource.confirmation_token) do %>
          <div class="button-link">
            Confirm email address
          </div>
        <% end %>
      </td>
    </tr>
  </table>

  <br /><br />
