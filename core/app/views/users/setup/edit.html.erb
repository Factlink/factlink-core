<%= form_for(@user, url: setup_account_path, html: { class: "form-horizontal setup-account" }) do |f| %>

  <h1>Hi <%= @user.name %>, set up your account here:</h1>

  <div class="setup-account-form">
    <div class="control-group">
      <%= f.label :full_name, "Full name", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :full_name, required: true %>
        <%= possible_error_for_field(@user, :full_name) %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, "New password", class: "control-label" %>

      <div class="controls">
        <%= f.password_field :password, required: true %>
        <%= possible_error_for_field(@user, :password) %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, "Confirm new password", class: "control-label" %>

      <div class="controls">
        <%= f.password_field :password_confirmation, required: true %>
        <%= possible_error_for_field(@user, :password_confirmation) %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit("Next Step", class: 'button button-confirm') %>
    </div>
  </div>
<% end %>
