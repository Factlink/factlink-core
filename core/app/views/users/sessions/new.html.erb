<pre>Usage of Factlink requires signing in. Please do so:</pre>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <pre><%= f.label :email %><br />
  <%= f.email_field :email %></pre>

  <pre><%= f.label :password %><br />
  <%= f.password_field :password %></pre>

  <% if devise_mapping.rememberable? -%>
    <pre><%= f.check_box :remember_me %> <%= f.label :remember_me %></pre>
  <% end -%>

  <pre><%= f.submit "Sign in" %></pre>
<% end %>

<pre>
<%= render :partial => "devise/shared/links" %>
</pre>