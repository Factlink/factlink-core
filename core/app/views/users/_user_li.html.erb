<li class="user-block" onclick="document.location = '<%= user_profile_path(user.username) %>';">
  <div class="user-avatar">
     <%= image_tag(user.avatar_url(size: 32), width: 32, height: 32, alt: user.username) %>
  </div>

  <div class="wrapper">
    <h3><%= user.username %></h3>
  </div>
</li>
