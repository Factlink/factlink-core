<article class="user-block" onclick="document.location = '<%= user_profile_path(user.username) %>';">
	<div class="user-avatar">
		<%= image_tag(user.avatar.url(:small), :width => 32) %>
	</div>
	
	<div class="wrapper">
		<h1><%= user.username %></h1>
		<sub>authority: <%= user.graph_user.rounded_authority %></sub>
	</div>
</article>