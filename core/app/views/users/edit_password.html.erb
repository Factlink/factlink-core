<header class="content-header">
  <div class="main-region-tabs">
    <%= link_to "About", user_profile_path(current_user) %>
    ·
    <%= link_to "Edit", edit_user_path(current_user) %></li>
    ·
    <%= link_to "Change password", user_password_edit_path(current_user), class: :active %>
    ·
    <%= link_to "Notification Settings", user_notification_settings_path(current_user) %>
  </div>
</header>

<div class="edit-user-container" id="edit_user">
  <div class="narrow-indented-block">
    <%= form_for(@user, :url => user_update_password_path(@user), :html => { :method => :put, :class => "form-horizontal" }, validate: true) do |f| %>
      <div>
        <div class="control-group">
          <%= f.label :current_password, "Current password", class: "control-label"  %>
          <div class="controls">
            <%= f.password_field :current_password, required: true, tabindex: 1 %>
          </div>

          <div class="controls">
            <%= link_to "Forgot your password?", new_password_path('user'), class: "controls-information-item" %>
          </div>
        </div>

        <%= possible_error_for_field(@user, :current_password) %>

        <div class="control-group">
          <%= f.label :password, "New password", class: "control-label"  %>
          <div class="controls">
            <%= f.password_field :password, :autocomplete => "off", required: true, tabindex: 2 %>
          </div>
        </div>

        <%= possible_error_for_field(@user, :password) %>

        <div class="control-group">
          <%= f.label :password_confirmation, "Confirm new password", class: "control-label" %>
          <div class="controls">
            <%= f.password_field :password_confirmation, required: true, tabindex: 3 %>
          </div>
        </div>

        <%= possible_error_for_field(@user, :password_confirmation) %>

        <div class="controls">
          <button type="submit" class="button-confirm controls-information-item">Change my password</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
