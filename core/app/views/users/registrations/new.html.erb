<h2 style="color: #333; text-shadow: 0px 1px 1px #fff;">New to Factlink?</h2>
<h3 style="color: #777; text-shadow: 0px 1px 1px #fff;">Sign up here, it's easy!</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :username, :placeholder => "Username" %>
	<span style="padding-left: 8px; color: #666; font-size: 0.9em; text-shadow: 0px 1px 1px #fff;">You can use letters, numbers and the underscore character.</span><br/>
	

  <%= f.email_field :email, :placeholder => "Email" %><br/>
  <%= f.password_field :password, :placeholder => "Password" %><br/>
  <%= f.password_field :password_confirmation, :placeholder => "Password confirmation" %><br/>

  <div style="margin-left: 86px;"><%= f.submit "Sign up", :class => "button confirm" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>