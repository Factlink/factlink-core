<%= form_for(User.new, :as => :user, :url => registration_path(:user), validate: true) do |f| %>

  <%= f.text_field :username, placeholder: "Username", required: "required" %>
  <div id="user_email_wrapper">
    <%= f.email_field :email, placeholder: "Email", required: "required" %>
  </div>

  <%= f.submit "Reserve", class: "btn btn-success", disable_with: "Reserving..." %>

  <% content_for :javascript do %>
    <script>
    $('form.user_new input#user_username').focus(function(){$('label[for=user_username]').hide()})
    $('form.user_new input#user_username').blur(function(){$('label[for=user_username]').show()})
    $('form.user_new input#user_email').focus(function(){$('label[for=user_email]').hide()})
    $('form.user_new input#user_email').blur(function(){$('label[for=user_email]').show()})
    </script>
  <% end %>

<% end %>
