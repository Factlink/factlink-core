<% content_for :left_column do %>
  &nbsp;
<% end %>

<% content_for :main_column do %>


<h1>Forgot your password?</h1>
<p>Please enter your email address so we can send you a password reset:</p>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

  <%= devise_error_messages! %>

  <section class="append-bottom">
    <div class="row">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
  </section>

  <div class="action-wrapper">
    <%= f.submit "Send me reset password instructions", :class => "btn" %>
  </div>

<% end %>

Other problems? <a href="mailto:info@factlink.com">Email us!</a>

<% end %>