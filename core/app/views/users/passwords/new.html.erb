<% content_for :left_column do %>
  &nbsp;
<% end %>

<% content_for :main_column do %>
  <div class="content-header">
    <h1>Forgot your password?</h1>
  </div>
  <p>Please enter your email address so we can send you a password reset:</p>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form" }) do |f| %>

    <div class="control-group">
      <%= f.label :email, class: "control-label" %>
      <%# HACK: this should be done with label with a block,
                 but a bug in rails prevents this:
                 https://github.com/rails/rails/pull/5691/files

                 Probably we can fix this when upgrading to
                 Rails 4
      %>
      <% if resource.errors[:email].any? %>
        <div class='field_with_errors'><span class="help-inline">
         (errors: <%= resource.errors[:email].join(", ") %>)
        </div></div>
      <% end %>

      <div class="controls">
        <%= f.email_field :email, class: "input-xlarge" %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Send me reset password instructions", :class => "btn" %>
    </div>

  <% end %>

  Other problems? <a href="mailto:support@factlink.com">Email us!</a>
<% end %>
