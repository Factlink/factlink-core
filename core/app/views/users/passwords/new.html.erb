<% content_for :left_column do %>
  &nbsp;
<% end %>

<% content_for :main_column do %>


<h1>Forgot your password?</h1>
<p>Please enter your email address so we can send you a password reset:</p>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>

  <div class="control-group">
    <%= f.label :email, class: "control-label" %>
    <div class="controls">
      <%= f.email_field :email, class: "input-xlarge" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Send me reset password instructions", :class => "btn" %>
  </div>

<% end %>

Other problems? <a href="mailto:info@factlink.com">Email us!</a>
<% end %>
