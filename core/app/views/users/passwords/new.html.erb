<div class="devise-form">
  <h1>Forgot your password?</h1>

  <p>Please enter your email address so we can send you a password reset:</p>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form" }) do |f| %>

    <div class="control-group">
      <div class="controls">
        <%= f.email_field :email, placeholder: "Email address",
          class: "text" %>
        <%= possible_error_for_field(resource, :email) %>
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="button-confirm">Send me reset password instructions</button>
    </div>
  <% end %>

  <p>Other problems? <a href="javascript:" class="js-feedback-modal-link">Contact us!</a></p>
</div>
