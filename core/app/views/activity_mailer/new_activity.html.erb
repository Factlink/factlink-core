<% content_for :styles do %>
<style type="text/css">
  h2 {
    color: #333;
    font-family: Helvetica, Arial, sans-serif;
    font-weight: bold;
    font-size: 18px;
  }
  p { margin: 0; }
  a {
    color: #3D75A3;
    font-weight: bold;
    text-decoration: none;
  }
  .body {
    color: #555;
    font-size: 13px;
    font-family: "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
  }
  .activity-title {
    color: #333;
    font-size: 15px;
    margin-bottom: 0.25em;
  }
  .activity-body {
    font-size: 13px;
  }
  .activity-action {
    margin-top: 2em;
  }
</style>
<% end %>

<% content_for :email_body do %>
  <div class="body">
    <%= render_mail_template_for_action @activity.action %>
  </div>
<% end %>
