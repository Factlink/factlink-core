<% content_for :email_header do %>
  <h1 class="header-title">Hello <%= @user.name %></h1>
  <h2 class="header-subtitle"><%= @activity.user.user %> has sent you a personal message on Factlink</h2>
<% end %>

<%= render 'activity_mailer/activities/shared/conversation_message', conversation: @activity.subject %>

<br /><br />

<table class="button" align="center" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td class="button-inner">
      <%= link_to conversation_url(@activity.subject) do %>
        <div class="button-link">
          Reply to this message
        </div>
      <% end %>
    </td>
  </tr>
</table>

<br /><br />
