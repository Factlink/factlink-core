<%
  if @activity.action == 'added_supporting_evidence'
    type = :supporting
  else
    type = :weakening
  end
%>

<% content_for :email_header do %>
  <h1 class="header-title">Hello <%= @user.name %></h1>
  <h2 class="header-subtitle"><%= @activity.user.user %> added a <%= type %> argument</h2>
<% end %>

<table cellpadding="0" cellspacing="0" border="0" id="added-argument-message">
  <tr>
    <td colspan="2" class="added-argument-message-header">
      <h3 class="message-title">
        <%= link_to(friendly_fact_url(@activity.object)) do %>
          <%= @activity.object.data.displaystring %>
        <% end %>
      </h3>
    </td>
  </tr>
    <tr>
      <% if type == :supporting %>
        <td class="added-argument-timeline-container">
          <%= render 'activity_mailer/activities/shared/argument_timeline', type: type %>
        </td>
      <% end %>

      <td class="added-argument-message-container <%= type %>">
        <table cellpadding="0" cellspacing="0" border="0" class="added-argument-message-box">
          <tr>
            <td valign="top" class="message-user-image">
              <img src="<%= @activity.user.user.avatar_url(size: 32) %>" width="32" height="32" alt="<%= @activity.user.user %>" />
              <%= link_to_possibly_dead_user(@activity.user.user, class: "user-name") %>
            </td>
          </tr>
          <tr>
            <td class="added-argument-message-content">
              <p>
                <%= @activity.subject.data.displaystring %>
              </p>
            </td>
          </tr>
        </table>
      </td>

      <% if type == :weakening   %>
        <td class="added-argument-timeline-container">
          <%= render 'activity_mailer/activities/shared/argument_timeline', type: type %>
        </td>
      <% end %>
    </tr>
</table>

<table class="button" align="center" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td class="button-inner">
      <%= link_to('Reply to this argument', friendly_fact_url(@activity.object) %>
    </td>
  </tr>
</table>
