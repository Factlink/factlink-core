<table cellpadding="0" cellspacing="0" border="0" id="user" width="100%">

  <tr>
    <td class="user-header">
      <img class="user-image" src="images/tom.jpg" />
      <%= link_to_possibly_dead_user(@activity.user.user), class: "user-name" %>
      <%= link_to(user_profile_url(@activity.user.user.username)) %>
      <span class="user-username muted">@<%= @activity.user.user.username %></span>
    </td>
  </tr>

  <tr>
    <td >
      <table cellpadding="20" cellspacing="0" border="0" id="user-info" width="100%">
        <tr>
          <td class="user-info-description" colspan="3">
            <p><%= @activity.user.user.biography %></p>
          </td>
        </tr>
        <tr>
          <td class="user-info-stat" width="50px">
            <span class="muted">Followers</span><br />
            <span class="user-info-value">2044</span>
          </td>
          <td class="user-info-stat" width="50px">
            <span class="muted">Following</span><br />
            <span class="user-info-value">742</span>
          </td>
          <td class="user-info-stat no-border">
            <span class="muted">Most authority on</span><br />
            <span class="user-info-value">
              <a href="" class="user-info-topic">Engineering</a>
            </span>
          </td>
        </tr>
      </table>
    </td>
  </tr>

</table>

<p align="center">
  <%= link_to(user_profile_url(@activity.user.user.username), class: "button") do %>
    Follow <%= @activity.user.user.username %>
  <% end %>
</p>
