<h1>Listing factlinks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @factlinks['factlinks'].each do |factlink| %>
  <tr>
    <td><%= factlink.title %></td>
    <td><%= factlink.description %></td>
    <td><%= factlink.content %></td>
    <td><%= link_to 'Show', factlink %></td>
    <td><%= link_to 'Edit', edit_factlink_path(factlink) %></td>
    <td><%= link_to 'Destroy', factlink, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

