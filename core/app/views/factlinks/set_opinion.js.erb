// Set data-score
listItem = $("#fl-source-<%= @factlink.id %>");
listItem.attr('data-score', <%= @factlink.total_score %>)

// Replace fl-vote-container with new opinion
$('li#fl-source-<%= @factlink.id %> div#fl-vote-container').empty().prepend("<%= escape_javascript(render(:partial => 'vote_options', :locals => { :factlink => @factlink, :parent => @parent } )) %>");

// Update the parent score
$('div#fl-stats').empty().prepend("<%= escape_javascript(render(:partial => 'score', :locals => { :factlink => @parent } )) %>");
