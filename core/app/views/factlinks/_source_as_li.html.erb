<li data-score="<%= factlink.total_score %>" id="fl-source-<%= factlink.id %>">

	<div id="fl-vote-container" class="fl-vote-container">
		<% if user_signed_in? %>
			<%= vote_options(factlink, parent) %>
		<% end %>
	</div>

	<span class="fl-statement-title"><%= factlink.displaystring %></span>
	<p><%= factlink.content %></p>
	<hr>
	
	<div class="fl-source-information">
		<span class="fl-source-created-by">by <%= link_to(factlink.created_by, user_profile_path(factlink.created_by.username), :target => "_blank") %></span>		
		<% if factlink.site %>
			<span class="fl-source">found on <a href="<%= factlink.site.url %>" target="_blank"><%= factlink.site.url %></a></span>
		<% else %>
			<span class="fl-source">found on <a href="<%= factlink.url %>" target="_blank"><%= factlink.url %></a></span>
		<% end %>
	</div>

	<%= link_to(image_tag('trashcan.png'), remove_factlink_from_parent_path(factlink.id, parent.id), :remote => true, :confirm => "Are you sure you want to remove this supporting/weakening fact?") %>
	
</li>