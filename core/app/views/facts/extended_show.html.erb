<%= render_mustache "facts/extended_fact", fact: @fact %>

<% content_for :javascript do %>
<script>
  (function(){
    window.currentFact = new ExtendedFact(<%= Facts::ExtendedFact.for(fact: @fact, view: self).to_json.html_safe %>);

    var view = new ExtendedFactView({
      el: $('#main-wrapper'),
      model: window.currentFact
    });
  })();
</script>
<% end %>