var fact = $("div[data-fact-id=<%= @fact_relation.fact.id %>]");
var active =  fact.find(".tab_content:visible").attr("rel");

var no_fact_message = fact.find(".no-evidence");
if (no_fact_message.length > 0) {
	no_fact_message.remove();
}


fact.find(".evidence[rel=" + active + "] table > tbody").append("<tr><td><%= escape_javascript(render(:partial => "/facts/partial/evidence_bubble", :locals => {  :fact => fact_relation.from_fact, :fact_relation => fact_relation})) %></td></tr>").factlink();
fact.trigger("factlink:switchTabAction", [active]);

