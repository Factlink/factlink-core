// Removes  from stream (should refactor to destroy method)
$('[data-fact-id=<%= @fact.id %>]').fadeOut('fast', function() {
	$(this).remove();
});

// Hides the popup
if ( parent.remote ) {
  parent.remote.hide();
  parent.remote.stopHighlightingFactlink(<%= @fact_id %>);
}

if ( Channels !== undefined ) {
  Channels.each(function(channel) {
    channel.fetch();
  });
}

