var fact =  $("div.fact-block[data-fact-id=<%=fact_relation.fact.id%>]");
var evidenceList = fact.find('.evidence-list ul.evidence-listing');

// Reset window
fact.find('.no-evidence-message').hide();

fact.find('.page').hide();
fact.find('.evidence-list').show();

var $el, $bubble;

// Add the evidence
$el = $("<%= escape_javascript(render('/facts/evidence_bubble', fact_relation: fact_relation )) %>");
$bubble = $(Mustache.to_html($('#fact_bubble_tmpl').html(), <%= Facts::FactBubble.for_fact_and_view(fact_relation.from_fact, self).to_json.html_safe %>, {fact_wheel: $('#fact_wheel_tmpl').html()}));

$el.append($bubble);

$el.factlink();

evidenceList.prepend($el);