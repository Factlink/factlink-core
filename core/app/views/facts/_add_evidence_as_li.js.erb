var fact =  $("div.fact-block[data-fact-id=<%=@fact_relation.fact.id%>]");
var evidenceList = fact.find('.evidence-list ul.evidence-listing');

// Reset window
fact.find('.no-evidence-message').hide();

fact.find('.page').hide();
fact.find('.evidence-list').show();

// Add the evidence
evidenceList.prepend("<%= escape_javascript(render(:partial => '/facts/partial/evidence_bubble', :locals => { :fact_relation => @fact_relation } )) %>").factlink();