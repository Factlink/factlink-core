<style>
	div#fl-relevance-container span {
		padding: 2px 12px;
	}

	div#fl-relevance-container span.active { 
			border: solid 1px white;
			background-color: #888;
			color: white;
			border-radius: 16px;
			text-decoration: none;
			text-shadow: nonefactlink;
	}

</style>

<%= link_to("<span class=\"relevant #{relevance_class_on_fact(:beliefs, fact_relation)}\">Relevant</span>".html_safe, relevance_path(fact_relation, :beliefs), :remote => true) %>
<%= link_to("<span class=\"might-be-relevant #{relevance_class_on_fact(:doubts, fact_relation)}\">Might be relevant</span>".html_safe, relevance_path(fact_relation, :doubts), :remote => true) %>
<%= link_to("<span class=\"not-relevant #{relevance_class_on_fact(:disbeliefs, fact_relation)}\">Not relevant</span>".html_safe, relevance_path(fact_relation, :disbeliefs), :remote => true) %>