<style>

	li.active {
		border: solid 2px rgb(260, 0, 0);
	}

</style>

<pre>Relevance for the relation:</pre>

<ul>	
	<li<%= active_class_for_type_and_fact(:beliefs, fact_relation) %>>
		<%= link_to("<span>Relevant!</span>".html_safe, relevance_path(fact_relation, :beliefs), :remote => true) %>
	</li>

	<li<%= active_class_for_type_and_fact(:doubts, fact_relation) %>>
		<%= link_to("<span>Might be relevant</span>".html_safe, relevance_path(fact_relation, :doubts), :remote => true) %>
	</li>
	
	<li<%= active_class_for_type_and_fact(:disbeliefs, fact_relation) %>>
		<%= link_to("<span>Not relevant</span>".html_safe, relevance_path(fact_relation, :disbeliefs), :remote => true) %>
	</li>
</ul>