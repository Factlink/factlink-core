<li data-score="<%= fact_relation.get_from_fact.brain_cycles %>" id="fl-source-<%= fact_relation.id %>" class="<%= fact_relation.type.value %>">
  <div class="container">
	
		<% if user_signed_in? %>
    <img class="arrow" src="/images/client/source-more-arrow.png">
		<% end %>

		<%= fl_source_stats(fact_relation) %>

  	<div class="fl-source-info">

    	<h2 class="fl-source">&#8220;<%= fact_relation.get_from_fact.displaystring %>&#8221;</h2>

    	<sub>
    		<span class="fl-source-created"><%= time_ago_in_words(fact_relation.get_from_fact.created_at) %> ago by <%= link_to(fact_relation.get_from_fact.created_by, user_profile_path(fact_relation.get_from_fact.created_by.username), :target => "_blank") %></span>
    		<% if fact_relation.get_from_fact.site %>
    			<span class="fl-source-found">found on <a href="<%= fact_relation.get_from_fact.site.url %>" target="_blank"><%= truncate(fact_relation.get_from_fact.pretty_url, :length => 25) %></a></span>
    		<% else %>
    			<span class="fl-source-found">found on <a href="<%= fact_relation.get_from_fact.url %>" target="_blank"><%= truncate(fact_relation.get_from_fact.pretty_url, :length => 25) %></a></span>
    		<% end %>
    	</sub>

      <!-- <div class="fl-remove-fact">
   			<%= link_to(image_tag('icons/users.png'), interacting_users_path(fact_relation.get_from_fact), :remote => true, :onclick => "$('div#dimmer').fadeIn(); $('div#fl-interacting-users').fadeIn();") %>
  		</div> -->

  		<!--
  					Here we should check if the current user created this Factlink,
  					if so, give him the option to remove 
      -->

  		<div class="fl-clear"></div>
  	</div>

  	<div class="fl-clear"></div>
  </div>
  
  <div class="fl-choices">			
		<div class="fl-relevance-container">
		  <h2 class="from_fact">&#8220;<%= fact_relation.get_from_fact.displaystring %>&#8221;</h2>
		  <% if fact_relation.type.value == "supporting" %>
        <span class="opinion">supports:</span>
      <% else %>
        <span class="opinion">weakens:</span>
		  <% end %>
		  <h2 class="to_fact">&#8220;<%= fact_relation.get_to_fact.displaystring %>&#8221;</h2>
		  
			<% if user_signed_in? %>
			<div class="fl-relevance-toggle-buttons">
				<%= fact_relation_relevance_options(fact_relation) %>
			</div>
			<% end %>
    </div>
    
		<div class="fl-opinion-container">
		  <h2 class="from_fact">&#8220;<%= fact_relation.get_from_fact.displaystring %>&#8221;</h2>
		  <% if user_signed_in? %>
			<div class="fl-opinion-toggle-buttons">
				<%= fact_opinion_options(fact_relation) %>
			</div>
			<% end %>			
		</div>
		
		<% unless user_signed_in? %>
		<div style="padding: 4px 0px 4px 0px;">
			please sign in to add your opinion
		</div>
		<% end %>
	</div>
</li>