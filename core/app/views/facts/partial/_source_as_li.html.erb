  		<% if evidence.site %>
  			<span class="fl-source-found">found on <a href="<%= evidence.site.url %>" target="_blank"><%= truncate(evidence.site.url, :length => 40) %></a></span>
  		<% else %>
  			<span class="fl-source-found">found on <a href="<%= evidence.url %>" target="_blank"><%= truncate(evidence.url, :length => 40) %></a></span>
  		<% end %>
  	</sub>

