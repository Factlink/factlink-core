<%= form_tag(facts_path) do %>
  <div>
    <%= label_tag :site %>:
    <%= text_field_tag :site %>
  </div>

  <div class="field">
    <%= label_tag :fact %>:
    <%= text_field_tag :fact %>
  </div>

  <div class="field">
    <%= label_tag :title %>:
    <%= text_field_tag :title %>
  </div>
   
  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
