<% content_for :javascript do %>
  <script>
    <%= render 'backbone/currentUser' %>

    layout = '<%= @layout %>';
    fact_text = '<%= params[:fact] %>';
    title = '<%= params[:title] %>';
    url = '<%= params[:url] %>'
    site_id = <%= @site ? @site.id : 'undefined' %>;

    (new ClientController)
      .newFact(layout, fact_text, title, url, site_id)
  </script>
<% end %>
