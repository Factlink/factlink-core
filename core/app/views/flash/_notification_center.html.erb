<div class="notification-center-alerts js-notification-center-alerts"></div>

<% content_for :alert_javascript do %>
  <script type="text/javascript">
    $(function() {
      <% if alert %>
        Factlink.notificationCenter.error('<%= j(alert) %>');
      <% end %>

      <% if notice %>
        Factlink.notificationCenter.success('<%= j(notice) %>');
      <% end %>
    });
  </script>
<% end %>
