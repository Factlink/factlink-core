<!-- header -->
<%= content_for :header do %>
<% end %>

<!-- left column -->
<%= content_for :left_column do %>
  <%= user_block(@user) %>
  
  <%= render :partial => "channels/channels", :locals => {:user => @user } %>
<% end %>

<!-- right-column -->
<%= content_for :right_column do %>

	<% if @user.graph_user.activities.count > 0 %>
	    <%= activity_list_for_user(@user.graph_user.activities, 20)%>
	<% end %>

<% end %>

<%= content_for :javascript do %>
  <%= javascript_include_tag "channels.js" %>
<% end %>

<%= render :template => 'layouts/frontend' %>