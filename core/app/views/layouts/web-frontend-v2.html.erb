<body>

	<div id="top-bar">
		<div class="container">

			<div id="factlink-logo" class="span-4">
				<a href="/"><%= image_tag('factlink-logo-inverse.png', :height => 20) %></a>
			</div>

			<div class="span-14">
				<%= fact_search %>
			</div>
			
			<div class="span-6 last">
					<%= render :partial => "users/account_block" %>
			</div>

		</div>
	</div>


  <div id="container" class="container">
	
		<!-- notification snippet -->
		<div id="application-notification">
			<% if notice %>
				<p class="notice"><%= notice %> <%= close_notifications_button %></p>
			<% end %>
			<% if alert %>
				<p class="alert"><%= alert %> <%= close_notifications_button %></p>
		<% end %>
		</div>
	
		<!-- header snippet -->
    <section id="header" class="span-24 append-bottom">
			<%= yield :header %>
    </section>


		<!-- left column -->
		<section id="left-column" class="span-4">
			<%= yield :left_column %>
		</section>

		<!-- main content -->
		<section id="main-column" class="span-14" role="main">
			<section id="main-wrapper">
			<%= yield :main_column %>
			</section>
		</section>

		<!-- left column -->
		<section id="right-column" class="span-6 last">

			<%= yield :right_column %>
		</section>


    <!-- <footer>
    </footer> -->
  </div> <!--! end of #container -->











