  <%= csrf_meta_tag %>

</head>

<body>

	<div id="top-bar">
		<div class="container">

			<div id="factlink-logo" class="span-3">

				<a href="/"><%= image_tag('factlink-logo-inverse.png', :height => 20) %></a>
				
			</div>

			<div class="span-13">
				&nbsp;
			</div>
			
			<div class="span-8 last">
					<%= render :partial => "users/account_block" %>
			</div>

		</div>
	</div>


  <div id="container" class="container">
	
		<!-- notification snippet -->
		<div id="application-notification">
			<% if notice %>
				<p class="notice"><%= notice %></p>
			<% end %>
			<% if alert %>
				<p class="alert"><%= alert %></p>
		<% end %>
		</div>
	
		<!-- header snippet -->
    <section id="header" class="span-24">
			<header>
				<%= yield :header %>
			</header>
    </section>

			

		<!-- left column -->
    <section id="left-column-container" class="span-7">		
			<div id="left-column">

				<%= yield :left_column %>

			</div>
    </section>

		<!-- main content -->
    <section id="main-column" class="span-16 prepend-1 last" role="main">
			
			<%= yield :main_column %>
			
    </section>


    <!-- <footer>
    </footer> -->
  </div> <!--! end of #container -->











  <!-- JavaScript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="/v2/js/libs/jquery-1.6.2.min.js"><\/script>')</script>

	<%= javascript_include_tag "rails" %>


  <!-- scripts concatenated and minified via ant build script-->
  <script defer src="/v2/js/plugins.js"></script>
  <script defer src="/v2/js/script.js"></script>
  <!-- end scripts-->

	
  <!-- Change UA-XXXXX-X to be your site's ID -->
  <script>
    window._gaq = [['_setAccount','UAXXXXXXXX1'],['_trackPageview'],['_trackPageLoadTime']];
    Modernizr.load({
      load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'
    });
  </script>
	
	<script>
		// get the facts
		function getFacts(url) {
			$.ajax({
			  url: url,
				dataType: "script",
			  success: function(){
				console.log($(this));
			    $(this).closest('li').addClass("active");
			  }
			});
		}

		// Hide the notifications
		$(function() {
			if ($('#application-notification')) {
				setTimeout(function() {
					$('#application-notification').slideUp('slow');
					// hideElement('application-notification') 
					}, 
					3000);
			}
		});
				
		$('.follow-channel').bind('click', function() {
			$.ajax({
			  url: $(this).data('follow-url'),
				dataType: "script",
			  success: function(){
					console.log("Succes");
			  }
			});

			return false;
		});
	</script>
