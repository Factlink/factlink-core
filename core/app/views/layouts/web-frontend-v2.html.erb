	<script>
		// get the facts
		function getFacts(url) {
			$.ajax({
			  url: url,
				dataType: "script",
			  success: function(){
			    $(this).closest('li').addClass("active");
			  }
			});
		}
				
		$('.follow-channel').bind('click', function() {
			$.ajax({
			  url: $(this).data('follow-url'),
				dataType: "script",
			  success: function(){
					console.log("Succes");
			  }
			});

			return false;
		});

	</script>


