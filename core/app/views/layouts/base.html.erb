<!DOCTYPE html>
 <html class="<%= browser_class_name  %>">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>
      <% if content_for? :title %>
        <%= yield :title %>
      <% else %>
        Factlink &mdash; Because the web needs what you know
      <% end %>
    </title>
    <meta name="description" content="">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "base" %>

    <%= yield :specific_stylesheet_tag %>

    <%= yield :stylesheets %>

    <% if can_haz :pink_feedback_button %>
      <!-- Speciaal voor jou Joel! -->
      <style>
        #feedback_button {background: #e6007e;}
      </style>
    <% end %>

    <link rel="chrome-webstore-item"
      href="https://chrome.google.com/webstore/detail/<%=FactlinkUI::Application.config.chrome_extension_id%>">

    <%= csrf_meta_tag %>
    <%= inject_special_test_code %>
  </head>
  <body class="factlink-site controller_<%= controller.controller_name -%> action_<%= controller.action_name -%><%= " show_sign_up" if defined? show_sign_up and show_sign_up %><%= " show_footer" if defined? show_footer and show_footer %>">
    <%= render 'feedback/button' unless defined? dont_render_feedback %>

    <%= render 'home/browser_support_message' %>

    <%= render "base/topbar", fixed_topbar: fixed_topbar %>

    <%= yield :main %>

    <% if defined? show_footer and show_footer %>
      <%= render "base/footer", show_sign_up: show_sign_up %>
    <% end %>

    <%= render "feedback/frame" %>

    <%= javascript_include_base %>
    <%= render 'snippets/raven_js' %>
    <%= render 'snippets/mixpanel' %>

    <%= yield :specific_javascript %>
    <%= render 'snippets/google_analytics' %>
  </body>
</html>
