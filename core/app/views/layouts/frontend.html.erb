<% content_for :main do %>
  <div class="container">
    <section id="main-column">
      <%= render 'flash/notification_center', notice: notice, alert: alert %>

      <section id="main-wrapper">
        <%= yield %>
      </section>
    </section>
  </div>
  <div id="modal_region"></div>
  <div id="js-facebook-renewal-region"></div>
  <div class="js-discussion-sidebar-region"></div>
<% end %>

<% content_for :specific_javascript do %>
  <script>
    FactlinkApp.start({factlinkAppMode: FactlinkAppMode.coreInSite});
  </script>

  <%= yield :javascript %>

<% end %>

<%= render template: 'layouts/base' %>
