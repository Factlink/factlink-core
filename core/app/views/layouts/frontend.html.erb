<head>
  <meta charset="utf-8">
  <!-- Use the .htaccess and remove these lines to avoid edge case issues.
       More info: h5bp.com/b/378 -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Factlink &mdash; helps people find credibility in the world's information</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->

  <!-- CSS: implied media=all -->
  <!-- CSS concatenated and minified via ant build script-->
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/bubble.css">
	<link rel="stylesheet" href="/stylesheets/grid.css">

	<link rel="stylesheet" href="/stylesheets/jquery-ui-1.8.16.custom.css">
	
	<link rel="stylesheet" href="/stylesheets/bootstrap-alerts.css">
  <!-- end CSS-->

  <!-- More ideas for your <head> here: h5bp.com/d/head-Tips -->

  <!-- All JavaScript at the bottom, except for Modernizr / Respond.
       Modernizr enables HTML5 elements & feature detects; Respond is a polyfill for min/max-width CSS3 Media Queries
       For optimal performance, use a custom Modernizr build: www.modernizr.com/download/ -->
  <%= javascript_include_tag "modernizr-2.0.6.min" %>
  <%= csrf_meta_tag %>

</head>

<body class="factlink-site">

	<div id="top-bar">
		<div class="container">

			<div id="factlink-logo" class="span-4">
				<a href="/"><%= image_tag('factlink-logo-inverse.png', :height => 20) %></a>
			</div>

			<div class="span-14">
				<%= render :partial => "home/snippets/fact_search" %>
			</div>
			
			<div class="span-6 last">
					<%= render :partial => "users/account_block" %>
			</div>

		</div>
	</div>


  <div id="container" class="container">
    
		<!-- notifications -->
		<% if alert || notice %>
		<div class="alert-message <%= alert ? "error" : "warning" %> push-4 span-13">
      <a class="close" href="#">x</a>
      	<% if notice %>
  				<%= notice %>
  			<% end %>
  			<% if alert %>
  				<%= alert %>
  		<% end %>
    </div>
    <% end %>
	
		<!-- header snippet -->
    <section id="header" class="span-24 append-bottom">
			<%= yield :header %>
    </section>


		<!-- left column -->
		<section id="left-column" class="span-4 side-column">
			<%= yield :left_column %>
		</section>

		<!-- main content -->
		<section id="main-column" class="span-14" role="main">  
			<section id="main-wrapper">
			<%= yield :main_column %>
			</section>
		</section>

    <!-- right column  -->
    <section id="right-column" class="span-6 last side-column">
      <%= yield :right_column %>      
    </section>
   

    <!-- <footer>
    </footer> -->
  </div> <!--! end of #container -->


  <!-- JavaScript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
  <%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" %>
  <script>window.jQuery || document.write('<script src="/javascripts/jquery-1.6.2.min.js"><\/script>')</script>

	<%= javascript_include_tag "rails" %>
	
  <!-- Change UA-XXXXX-X to be your site's ID -->
  <!-- <script>
    window._gaq = [['_setAccount','UAXXXXXXXX1'],['_trackPageview'],['_trackPageLoadTime']];
    Modernizr.load({
      load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'
    });
  </script> -->
  <%= javascript_include_tag "jquery.hoverIntent.minified" %>
  <%= javascript_include_tag "jquery-ui-1.8.16.custom.min" %>
  <%= javascript_include_tag "bootstrap-alert" %>
  <%= javascript_include_tag "disablewith" %>
  <%= javascript_include_tag "raphael-min" %>
  <%= javascript_include_tag "jquery.tipsy" %>
  <%= javascript_include_tag "jquery.factlink" %>
  <%= javascript_include_tag("jquery.infiniScroll") %>
  <%= javascript_include_tag "jquery.jeditable.mini" %>
  <%= javascript_include_tag "lib/jquery.mustache" %>
  <%= javascript_include_tag "underscore.js" %>
  <%= javascript_include_tag "backbone.js" %>
	<%= javascript_include_tag "evidence_search" %>
  
	<script>
		$(".fact-block").factlink();
		
		$(".alert-message").alert();
	</script>
	
	<%= yield :template %>
	
	<%= yield :javascript %>
	
	
  <!-- Prompt IE 6 users to install Chrome Frame. Remove this if you want to support IE 6.
       chromium.org/developers/how-tos/chrome-frame-getting-started -->
  <!--[if lt IE 7 ]>
    <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
    <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
  <![endif]-->

</body>
</html>
