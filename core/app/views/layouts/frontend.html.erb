<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
  <title>FactlinkUI</title>

	<!-- Blueprint CSS -->
	<link href="/stylesheets/screen.css" media="screen" rel="stylesheet" type="text/css" />
	<link href="/stylesheets/style.css" media="screen" rel="stylesheet" type="text/css" />
	<!-- [if lt IE 8]><link rel="stylesheet" href="/stylesheets/ie.css" type="text/css" media="screen, projection"><![endif] -->

  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

	<div id="headerWrapper" class="append-bottom">	
		<div id="header" class="container">
			<div class="span-24">
				<div class="span-3">
					<%= link_to(image_tag("factlink-logo.png", :width => 96), "/") %>
				</div> <!-- .span-3 -->
		
				<div id="search" class="span-6">
					<%= form_tag root_path, :method => 'post' do %>
						<input id="search" name="search" type="text" value="<%= params[:search] %>" placeholder="Search">
						<span class="glass">
							<i></i>
						</span>
					<% end %>
				</div> <!-- #search -->
				
				<div class="span-10 append-1 last">
					<ul id="mainMenu" class="horizontal">
						<li>Home</li>
						<li>Profile</li>
						<li>Messages</li>					
					</ul>
				</div> <!-- #buttons -->

				<div class="span-4">
					
					<ul id="account-management" class="horizontal">
					<% if user_signed_in? %>
						<li><%= link_to("Sign out", destroy_user_session_path) %></li>
					<% else %>
						<li><%= link_to("Sign in", new_user_session_path) %></li>
					<% end %>
					
					</ul>
				</div>

			</div> <!-- .span-24 -->
		
		</div> <!-- #header -->
	</div> <!-- #headerWrapper -->
	
	<div id="mainWrapper" class="container">
		
		<% if notice %>
		<p class="notice"><%= notice %></p>
		<% end %>

		<% if alert %>
		<p class="alert"><%= alert %></p>
		<% end %>
		
		<%= yield %>

	</div> <!-- #mainWrapper -->
</body>
</html>