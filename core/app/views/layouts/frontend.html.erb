<% content_for :title do %>
  Factlink &mdash; Because the web needs what you know
<% end %>

<% content_for :specific_stylesheet_tag do %>
  <%= stylesheet_link_tag "frontend" %>
<% end %>


<% content_for :main do %>
    <div id="container" class="container fixed">
      <section id="left-column">
        <% if content_for?(:left_column) %>
          <%= yield(:left_column) %>
        <% else %>
          &nbsp;
        <% end %>
      </section>

      <section id="main-column">
        <%= render 'flash/notification_center', notice: notice, alert: alert %>

        <section id="main-wrapper">
          <%= yield :main_column %>
          <%= yield %>
        </section>
      </section>
    </div>
    <div id="modal_region"></div>
    <div id="js-facebook-renewal-region"></div>
    <div class="js-discussion-modal-region"></div>
<% end %>

<% content_for :specific_javascript do %>
  <%= javascript_include_extended %>

  <script>
    <%= render 'backbone/currentUser' %>

    Factlink.allowFeatures(<%= current_ability.feature_toggles.to_json.html_safe %>);
    Factlink.setSignedIn(<%= current_ability.signed_in?.to_json.html_safe %>);

    FactlinkApp.start({factlinkAppMode: FactlinkAppMode.coreInSite});


  </script>

  <%= yield :javascript %>

<% end %>

<%= render template: 'layouts/base', locals: {
  fixed_topbar: true
} %>
