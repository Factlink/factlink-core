<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag "modal" %>
	<title><%= "Factlink: \"#{@title}\"" || "Factlink modal window" %></title>
	
	<style type="text/css">
    html, body{ 
	    width: 100%;
	    height: 100%;
    }
	</style>
	
	<%= csrf_meta_tag %>
</head>
<body>

	<div class="modal">			
		<%= yield %>
	</div>
	
	<%= yield :template %>
  
	<%= javascript_include_tag "modal" %>
	
	<%= yield :javascript %>
	
	<script type="text/javascript">
    $(".modal").draggable();
    $( document ).bind('click', function(e) {
      if( $(e.target).is('body') )
        parent.remote.hide();
    });
  </script>
	
</body>
</html>
