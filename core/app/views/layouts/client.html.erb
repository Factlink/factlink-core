<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag "bubble" %>
  <title><%= "Factlink: \"#{@title}\"" || "Factlink modal window" %></title>

  <style type="text/css">
    html, body{
      width: 100%;
      height: 100%;
      background: transparent;
    }
  </style>

  <%= csrf_meta_tag %>
</head>
<body>

  <div class="modal">
    <div class="drag-handler" style="height:7px; cursor: all-scroll; position:absolute; width:100%"></div>
    <div class="drag-handler" style="height:7px; cursor: all-scroll; position:absolute; bottom: 0; width:100%"></div>
    <div class="drag-handler" style="width:7px; cursor: all-scroll; position:absolute; left: 0; red; height:100%"></div>
    <div class="drag-handler" style="width:7px; cursor: all-scroll; position:absolute; right:0; height:100%"></div>
    <%= yield %>
  </div>

  <%= yield :template %>

  <%= javascript_include_tag "modal" %>

  <%= yield :javascript %>

  <script type="text/javascript">
    $(".modal").draggable({handle: '.drag-handler'});
    $( document ).bind('click', function(e) {
      if( $(e.target).is('body') )
        parent.remote.hide();
    });
  </script>

  <%= render 'home/twipsy' %>
</body>
</html>
