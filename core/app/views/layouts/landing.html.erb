  <%= csrf_meta_tag %>

</head>

<body class="factlink">

  <%= render 'home/header' %>


  <div id="body">
    <div class="container">
      <div class="column append-1 span-16">
        <div id="payoff" class="column span-15 clear">
          <%= yield :payoff %>
        </div>

        <div id="selling-points" class="column span-7 prepend-top">
          <%= yield :selling_points %>
        </div>

        <div id="movie" class="column push-1 last prepend-top">
          <%= yield :movie %> 
        </div>
      </div>

      <div class="column span-6 last">
        <div id="signup" class="column span-6">
          <%= yield :sign_up %>
        </div>
        <div id="top-facts" class="column span-7 prepend-top">
          <%= yield :top_facts %>
        </div>
      </div>
    </div>
  </div>
  
  <%= render 'home/footer' %>

  
  <div id="feedback">
    <a href="mailto:feedback@factlink.com?Subject=Feedback Factlink pre-alpha">Feedback</a>
  </div>
  
  <!-- JavaScript at the bottom for fast page loading -->

  <%= javascript_include_tag "landing" %>
 
	</script>
	
	<script>
	$('.bookmarklet').twipsy();
	</script>
	
	<%= yield :template %>

	<%= yield :javascript %>

	
