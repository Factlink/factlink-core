<% content_for :main do %>
  <div class="header">
    <div class="background">
      <%= image_tag "base/header/background.jpg", class: "stars" %>
      <%= image_tag "base/header/earth.png", class: "earth_background" %>
    </div>

    <div class="container">
      <%= render 'flash/simple', notice: notice, alert: alert %>

      <%= yield :header %>
    </div>
  </div>

  <div class="content">
    <div class="container">
      <%= yield :content %>
    </div>
  </div>
<% end %>

<%= render template: "layouts/base", locals: {
  show_footer: true
} %>
