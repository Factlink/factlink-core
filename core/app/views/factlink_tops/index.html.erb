<h1>Factlinks</h1>

<form method="GET" action="<%= factlink_overview_path %>">
<table>
	<colgroup>
		<col style="width: 450px;" />
		<col style="width: 120px;" />
		<col span="3" style="width: 50px;" />
	</colgroup>
	<thead>
		<tr>
			<td colspan="5" class="search">
				<input type="text" class="search" name="s" placeholder="Search.." <%= params[:s] ? "value='#{params[:s]}'" : "" %>>
			</td>
		</tr>
	  <tr>
	    <th style="width: 450px;"><%= sortable 'displaystring' %></th>
	    <th style="width: 120px;"><%= sortable 'created_at' %></th>
			<th></th>
	    <th></th>
	    <th></th>
	  </tr>
	</thead>
	<tfoot>
		<tr>
			<td colspan="5">
				<%= will_paginate @factlink_tops, :align => "center" %>
			</td>
		</tr>
	</tfoot>
	<tbody>
	<% @factlink_tops.each do |factlink_top| %>
	  <tr>
	    <td><%= factlink_top.displaystring %></td>
			<td><%= factlink_top.created_at.strftime("%d %b %Y") %></td>
	    <td><%= link_to 'Show', factlink_top %></td>
	    <td><%= link_to 'Edit', edit_factlink_top_path(factlink_top) %></td>
	    <td><%= link_to 'Destroy', factlink_top, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</tbody>
</table>
</form>

<br />

<%= link_to 'New Factlink top', new_factlink_top_path %>
