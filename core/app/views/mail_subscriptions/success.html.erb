<% content_for :title do %>
  Factlink &mdash; Because the web needs what you know
<% end %>

<h1 class="unsubscribe-text">You have been succesfully <%= @subscribe_action == 'subscribe' ? "subscribed to" : "unsubscribed from" %> <%= t(@type, scope: 'mail_subscriptions') %> emails.</h1>
<% if @subscribe_action == 'unsubscribe' && @type != 'all' %>
  <%= link_to 'Subscribe again', subscribe_url(@user.user_notification.notification_settings_edit_token, @type), class: 'button button-confirm' %>
<% end %>
