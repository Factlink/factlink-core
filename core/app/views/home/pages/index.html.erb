<% content_for :header do %>
  <div class="homepage-header">
    <h1>Share your knowledge for a better world</h1>
    <p class="publisher-page-paragraph">Use Factlink to discuss <i>anything</i> on the web.</p>

    <div class="visible-when-chrome homepage-header-button">
      <a id="chrome-extension-webstore-button" class="button-confirm button-huge" href="javascript:chrome.webstore.install()">Install Factlink for Chrome</a>
    </div>

    <div class="visible-when-firefox homepage-header-button">
      <a id="firefox-extension-button" class="button-confirm button-huge" href="https://static.factlink.com/extension/firefox/factlink-latest.xpi">Install Factlink for Firefox</a>
    </div>

    <div class="visible-when-safari homepage-header-button">
      <a id="safari-extension-button" class="button-confirm button-huge" href="https://static.factlink.com/extension/firefox/factlink.safariextz">Install Factlink for Safari</a>
    </div>

    <div class="visible-when-unsupported-browser homepage-header-button">
      <div class="homepage-dashed-border">
        <a id="bookmarklet-button" class="homepage-bookmarklet button-confirm button-huge" onclick="return false"><span style="display: none">Factlink</span></a>
      </div>

      <p>To install Factlink, drag this button to your bookmarks bar</p>
    </div>
  </div>
<% end %>

<% content_for :content do %>
  <div class="homepage-horizontal">
    <div class="homepage-horizontal-box">
      <i class="homepage-icon-layer"></i>
      <h1 class="homepage-heading">Discuss anything, anywhere</h1>
      <p>We believe in an open internet where everything can be discussed. With Factlink we have created a layer over the web that shows discussions inside the text you are reading.</p>
    </div>
    <div class="homepage-horizontal-box">
      <i class="homepage-icon-social"></i>
      <h1 class="homepage-heading">A social network for knowledge</h1>
      <p>Building and discovering knowledge is a social activity. We make it easy to involve your friends or followers in discussions, and build a reputation. Invite them to share their knowledge with the world!</p>
    </div>
  </div>
<% end %>

<% content_for :specific_javascript do %>
  <script>
    $(function() {
      $('#bookmarklet-button').attr('href', Factlink.Global.bookmarklet_link);
    });
  </script>
<% end %>
