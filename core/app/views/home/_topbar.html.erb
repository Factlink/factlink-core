<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <div class="row">
        <div class="span3">
          <h3>
            <a class="brand" href="/"><%= image_tag('factlink-logo-beta.png') %></a>
          </h3>
        </div>
        <% if current_user %>
        <div class="span9">
          <% if can? :index, Fact %>
            <%= render "facts/fact_search" %>
          <% end %>

          <ul class="nav secondary-nav pull-right">
            <% if current_user %>
              <% if can? :access, Ability::FactlinkWebapp %>
              <% if cannot? :access, Ability::AdminArea %>
                <li>
                  <a class="take-the-tour" data-toggle="modal">Take the tour</a>
                </li>
              <% end %>
              <% end %>

              <% if can? :access, Ability::AdminArea %>
                <li class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown">
                    Admin
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to("Users", admin_users_path) %></li>
                    <li><%= link_to("Jobs", admin_jobs_path) %></li>
                  </ul>
                </li>
              <% end %>

              <li class="dropdown" id="notifications">
                <a class="dropdown-toggle" data-toggle="dropdown">
                  <%= image_tag("activities/icon-generic.png") %>
                  <span class="unread"></span>
                </a>
                <ul class="dropdown-menu">
                </ul>
              </li>

              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">
                  <%= image_tag(current_user.avatar_url(size:20), :width => 20) %>
                  <%= current_user.username %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <% if can? :access, Ability::FactlinkWebapp %>
                    <li><%= link_to("<i class='icon-book'></i>&nbsp;#{t(:my_channels).capitalize}".html_safe, user_profile_path(current_user)) %></li>
                  <% end %>
                  <li><%= link_to("<i class='icon-cog'></i>&nbsp;Settings".html_safe, edit_user_path(current_user)) %></li>
                  <li><%= link_to("<i class='icon-off'></i>&nbsp;Sign out".html_safe, destroy_user_session_path) %></li>
                </ul>
              </li>

              <% if can? :access, Ability::FactlinkWebapp %>
              <li class="dropdown" data-dropdown="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">
                  <%= image_tag('info.png') %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><a href="<%= FactlinkUI::Application.config.static_url %>/chrome/factlink-latest.crx"><%= image_tag("chromeGrayIcon.png", style: "padding-right: 4px") %>Chrome Extension</a></li>
                  <li><a onclick="return false" title="You can drag this Bookmarklet to your bookmarks bar. Suitable for browsers other than Chrome." class="bookmarklet"
                         <%# here we need singlequotes kthxbye: %>
                         href='javascript:<%= minify_js(ensure_no_single_quotes(render 'home/bookmarklet.js')) %>'><%= image_tag("bookmarkletGrayIcon.png") %><span style="display: none">Factlink</span> Bookmarklet</a></li>
                  <li class="divider"></li>
                  <li><%= link_to "Privacy Policy", privacy_path %></li>
                  <li><%= link_to "Terms of Service", tos_path %></li>
                  <% if can_haz :version_number %>
                    <li><a>Version <%= FactlinkUI::Application.config.version_number %></a></li>
                  <% end %>

                </ul>
              </li>
              <% end %>
            <% else %>
              <li>
                <%= link_to("Sign in", new_user_session_path) %>
              </li>
            <% end %>
          </ul>
        </div>
        <% else %>
        <div id="sign-in-form" style="float: right" class="span8">
          <% unless user_signed_in? %>
            <%= form_for("user", :url => user_session_path) do |f| %>
            <%= link_to "Can't access?", new_password_path('user'), id: :cannot_access_account %>

              <div class="input-fields">
                <%= f.email_field :email, placeholder: "Email" %>
                <%= f.password_field :password, placeholder: "Password" %>
                <%= f.submit 'Sign in', class: 'btn' %>
              </div>

            <% end %>
          <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
