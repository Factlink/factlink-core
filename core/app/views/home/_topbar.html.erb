<% if current_user && !current_user.seen_the_tour %>
  <% content_for :javascript do %>
    <script>$(document).ready(function(){$(".take-the-tour").click();});</script>
  <% end %>
<% end %>

<div class="topbar">
  <div class="topbar-inner">
    <div class="container">
      <h3>
        <a class="brand" href="/"><%= image_tag('logo-gray.png', :height => 20, :width => 106) %></a>
      </h3>
      <%= render "facts/fact_search" %>

      <ul class="nav secondary-nav">
        <li>
          <a class="show-modal take-the-tour" href="javascript:void(0);">Take the tour</a>
        </li>
        <% if current_user %>


          <% if can? :access, Ability::AdminArea %>
          <li class="dropdown" data-dropdown="dropdown">
            <a class="dropdown-toggle">Admin</a>
            <ul class="dropdown-menu">
              <li><%= link_to("Users", admin_users_path) %></li>
              <li><%= link_to("Jobs", admin_jobs_path) %></li>
            </ul>
          </li>
          <% end %>

          <li class="dropdown" data-dropdown="dropdown">
            <a class="dropdown-toggle">   <%= image_tag(current_user.avatar.url(:small), :width => 20) %> <%= current_user.username %>  </a>
            <ul class="dropdown-menu">
              <li><a href="<%= FactlinkUI::Application.config.static_url %>/chrome/factlink-latest.crx">Chrome Extension</a></li>
              <li><a title="You can drag this Bookmarklet to your bookmarks bar. Suitable for browsers other than Chrome." class="bookmarklet"
                     {# here we need singlequotes kthxbye: #}
                     href='javascript:<%= minify_js(ensure_no_single_quotes(render 'home/bookmarklet.js')) %>'>Factlink Bookmarklet</a></li>
              <li class="divider"></li>
              <li><%= link_to("Sign out", destroy_user_session_path) %></li>
            </ul>
            </li>
        <% else %>
          <li>
            <%= link_to("Sign in", new_user_session_path) %>
          </li>
        <% end %>
    </div>
  </div>
</div>
