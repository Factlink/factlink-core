<% if current_user && !current_user.seen_the_tour && (can? :access, Ability::FactlinkWebapp) %>
  <% content_for :javascript do %>
    <script>$(document).ready(function(){$(".take-the-tour").click();});</script>
  <% end %>
<% end %>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <h3>
        <a class="brand" href="/"><%= image_tag('logo-gray.png', :height => 20, :width => 106) %></a>
      </h3>
      <% if can? :index, Fact %>
        <%= render "facts/fact_search" %>
      <% end %>

      <ul class="nav secondary-nav pull-right">
        <% if current_user %>
          <% if can? :access, Ability::FactlinkWebapp %>
            <li>
            <a class="take-the-tour" data-toggle="modal" href="first-tour-modal">Take the tour</a>
            </li>
          <% end %>
          <li class="divider-vertical"></li>


          <% if can? :access, Ability::AdminArea %>
            <li class="dropdown" id="admin-menu">
              <a class="dropdown-toggle" data-toggle="dropdown" href="admin-menu">Admin <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to("Users", admin_users_path) %></li>
              <li><%= link_to("Jobs", admin_jobs_path) %></li>
            </ul>
          </li>
          <% end %>

          <li id="notifications" id="notifcations-menu">
            <a data-toggle="dropdown">
              <%= image_tag("activities/icon-generic.png") %>
              <span class="unread"></span>
            </a>
            <ul id="notifications-dropdown">
            </ul>
          </li>

         <% if can? :access, Ability::FactlinkWebapp %>
            <li class="dropdown" id="factlink-menu">
            <a class="dropdown-toggle"  data-toggle="dropdown" href="factlink-menu"> <%= image_tag('factlink-icon-top-bar.png') %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="<%= FactlinkUI::Application.config.static_url %>/chrome/factlink-latest.crx"><%= image_tag("chromeGrayIcon.png", style: "padding-right: 4px") %>Chrome Extension</a></li>
              <li><a onclick="return false" title="You can drag this Bookmarklet to your bookmarks bar. Suitable for browsers other than Chrome." class="bookmarklet"
                     <%# here we need singlequotes kthxbye: %>
                     href='javascript:<%= minify_js(ensure_no_single_quotes(render 'home/bookmarklet.js')) %>'><%= image_tag("bookmarkletGrayIcon.png") %><span style="display: none">Factlink</span> Bookmarklet</a></li>
              <li class="divider"></li>
              <li><%= link_to "Privacy Policy", privacy_path %></li>
              <li><%= link_to "Terms of Service", tos_path %></li>
            </ul>
          </li>
          <% end %>
        <% else %>
          <li>
            <%= link_to("Sign in", new_user_session_path) %>
          </li>
        <% end %>

          <li class="dropdown" id="user-menu">
            <a class="dropdown-toggle"  data-toggle="dropdown" href="user-menu">   <%= image_tag(current_user.avatar_url(size:20), :width => 20) %> <%= current_user.username %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% if can? :access, Ability::FactlinkWebapp %>
                <li><a>Authority: <%=  Authority.from current_user.graph_user %></a></li>
                <li class="divider"></li>
                <li><%= link_to("My profile", user_profile_path(current_user)) %></li>
              <% end %>
              <li><%= link_to("Sign out", destroy_user_session_path) %></li>
            </ul>
          </li>


    </div>
  </div>
</div>
