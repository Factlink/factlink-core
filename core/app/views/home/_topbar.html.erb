<div class="topbar">
  <div class="fill">
    <div class="container">        
      <a class="brand" href="/"><%= image_tag('factlink-logo-inverse.png', :height => 20) %></a>
      
      <ul class="nav">
        <li class="search">
          <%= render "facts/fact_search" %>
        </li>          
      </ul>

      <ul class="nav secondary-nav">
        <% if current_user %>
        
        <% if current_user.admin? %>
        <li class="dropdown" data-dropdown="dropdown">
          <a class="dropdown-toggle">Admin</a>
          <ul class="dropdown-menu">
            <li><%= link_to("View Users", admin_users_path) %></li>
            <li><%= link_to("Add User", new_admin_user_path) %></li>
          </ul>
        </li>        
        <% end %>
        
        <li class="dropdown" data-dropdown="dropdown">
          <a class="dropdown-toggle"><%= current_user.username %></a>
          <ul class="dropdown-menu">
            <li><%= link_to("Sign out", destroy_user_session_path) %></li>
          </ul>
        </li>
        <% else %>
        <li>
          <%= link_to("Sign in", new_user_session_path) %>              
        </li>
        <% end %>

        <li class="dropdown" data-dropdown="dropdown">
          <a class="dropdown-toggle">âœ“</a>
          <ul class="dropdown-menu">
            <li><a href="<%= FactlinkUI::Application.config.static_url %>chrome/factlink-latest.crx">Chrome Extension</a></li>
            <li><a title="You can drag this Bookmarklet to your bookmarks bar. Suitable for browsers other than Chrome." class="bookmarklet" href='javascript:<%= minify_js(ensure_no_single_quotes(render 'home/bookmarklet.js')) %>'>Factlink Bookmarklet</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>
