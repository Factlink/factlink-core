<div id="alerts"></div>

<% if alert || notice %>
<div class="alert<%= alert ? " alert-error" : (notice ? " alert-success" : "") %>">
  <% unless params[:action] == "popup_show" %>
  <a class="close" href="#" data-dismiss="alert">x</a>
  <% end %>
  <%= notice || '' %>
  <%= alert  || '' %>
</div>
<% end %>

<%= yield :notifications %>

<% if @show_supported_browser_warning %>
  <% content_for :javascript do %>
    <script type="text/javascript">
      FactlinkApp.NotificationCenter.error("Your browser is not fully supported. The get the full Factlink experience we recommend to use Google Chrome. <a href='<%= pages_path("help/supported-browsers") %>'>Learn more...</a>", disablePreferredBrowserMessage);

      function disablePreferredBrowserMessage() {
        $.ajax({
          type: 'PUT',
          url: '<%= see_message_path current_user.username %>',
          data: {
            message: "supported_browser_warning"
          }
        });
      }
    </script>
  <% end %>
<% end %>