<% content_for :selling_points do %>
<h3>Why use factlink</h3>
<ul>
  <li><img src="/assets/chart.png" alt=""> Factlink provides immediate access to the state of knowledge.</li>
  <li><img src="/assets/people.png" alt=""> You can crowdsource with people to find more credibility in information.</li>
  <li><img src="/assets/globe.png" alt=""> Create a community where information is gathered and bundled.</li>
  <li><img src="/assets/money.png" alt=""> Oh, did we mention it’s <em>completely free?</em></li>
</ul>

<% end %>


<% content_for :top_facts do %>
  <h3>Top factlinks</h3>
  <ul id="top-factlinks">
  <% @facts.each do |f| %>
    <li><%= render_mustache 'facts/fact_bubble',  fact: f %></li>
  <% end %>
  </ul>
<% end %>

<% content_for :movie do %>
  <img src="/assets/fact-wheel.png" id="movie-container" alt="Facts">
<% end %>

<% content_for :template do %>
  <%= load_js_template "fact_bubble_tmpl",        "facts/_fact_bubble.html.mustache" %>
  <%= load_js_template "fact_wheel_tmpl",         "facts/_fact_wheel.html.mustache" %>
<% end %>

<% content_for :javascript do %>
  <script>
    $("article.fact").each(function()  {
      $fact = $(this);
      $fact.data("wheel", new Wheel(this));
      $fact.data("wheel").init($fact.find(".wheel").get(0));
    });
  </script>
<% end %>
