<div id="leftColumn" class="span-12 append-bottom">

	<div id="related_topics" class="span-12 prepend-top">
		
		<% if params[:search] %>
			<p>Did you mean '<span class="italic"><%= params[:search] %></span>'?</p>
		<% end %>
		
		<ul class="horizontal">
			<li>#linux</li>
			<li>#kernel</li>
			<li>#failure</li>
		</ul>

	</div> <!-- related_topics -->
	
	
	<div id="factlinkContainer">

		<% unless @results['factlinks'].count > 0 %>
			<p><%= @results['factlinks'].count %> results</p>
		<% else %>		

			<% @results['factlinks'].each do |factlink| %>
				<%= render :partial => "factlink_block", :locals => {:factlink => factlink} %>
			<% end %>
			
		<% end %>
	</div> <!-- factlinkContainer -->
	
</div> <!-- leftColumn -->


<div id="rightColumn" class="span-12 prepend-top last">
	
	<div id="rightColumnContainer">
		
		<div id="topics" class="span-12">
			<div class="span-6">
				<h3>Related topics</h3>

				<ul>
				<% @results['topics'].each do |topic, count| %>
					<li><%= topic %></li>
				<% end %>
				</ul>
				
			</div>
			<div class="span-6 last">
				<h3>Related users</h3>

				<ul>
				<% @results['users'].each do |user| %>
					<li><%= user %></li>
				<% end %>
				</ul>
			</div>

			</div>		
		</div> <!-- #topics -->
		
		
	</div> <!-- #rightColumnContainer -->
	
</div> <!-- #rightColumn -->