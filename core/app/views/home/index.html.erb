<% content_for :payoff do %>
<h2>Building a collectively reviewed perspective on the world's information</h2>
<p> Because the world needs what you know!</p>

<% end %>

<% content_for :sign_up do %>

  <% if notice %>
  <pre><%= notice %></pre>
  <% end %>

  <h4>Register your username</h4>
  <p>Early bird wins the worm. Be ahead of the masses and register your username now!</p>

  <%= render template: "users/registrations/new" %>
  &nbsp;

<% end %>


<% content_for :selling_points do %>
<h3>Why use Factlink</h3>
<ul>
  <li><img src="/assets/chart.png" alt="Pie Chart">Build authority on any topic, discover expertise</li>
  <li><img src="/assets/people.png" alt="People">Share what you know, contribute to people's perspective</li>
  <li><img src="/assets/globe.png" alt="Worls">Check the credibility of the information you are reading</li>
  <li><img src="/assets/money.png" alt="Money">Free information access. Period</li>
</ul>

<% end %>


<% content_for :top_facts do %>
  <h3>Top factlinks</h3>
  <ul id="top-factlinks">
  <% @facts.each do |f| %>
    <li><%= render_mustache 'facts/fact_bubble',  fact: f, limit_characters_to_display: 80, hide_links: true %></li>
  <% end %>
  </ul>
<% end %>

<% content_for :movie do %>
  <img src="/assets/fact-wheel.png" id="movie-container" alt="Facts">
<% end %>

<% content_for :template do %>
  <%= load_js_template "fact_bubble_tmpl",        "facts/_fact_bubble.html.mustache" %>
  <%= load_js_template "fact_wheel_tmpl",         "facts/_fact_wheel.html.mustache" %>
<% end %>

<% content_for :javascript do %>
  <script>
    $("article.fact").each(function()  {
      $fact = $(this);
      $fact.data("wheel", new Wheel(this));
      $fact.data("wheel").init($fact.find(".wheel").get(0));
    });
  </script>
<% end %>
