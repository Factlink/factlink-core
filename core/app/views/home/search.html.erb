<% content_for :script do %>
	<%= javascript_include_tag("factlink_overview") %>
	<% if @facts.count < @row_count %>
	  <script type="text/javascript">
	    var a = <%= @facts.count %>;
	    var b = <%= @row_count %>;
	    window.isFullyLoaded = true;
	    $( '#load_more' ).hide();
      $( '#loading' ).hide();
	  </script>
	<% end %>
<% end %>


<% content_for :left_column do %>
	
	&nbsp;

<% end %>

<% content_for :main_column do %>

	<h1>Factlink search - providing credibility you can see</h1>

	<% unless @facts.count > 0 %>

		<div class="append-bottom">
			<ul>
				<li>Your search didn't return any matching results...</li>
			</ul>
		</div>

		<div class="append-bottom">
			Here are some random facts that might be interesting:
		</div>
	
		<%= random_facts(5) %>
	
	<% else %>
		<%= fact_listing(@facts) %>
	<% end %>
	
<% end %>