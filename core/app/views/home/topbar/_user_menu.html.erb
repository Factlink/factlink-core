<li class="dropdown">
  <a class="dropdown-toggle" data-toggle="dropdown">
    <%= image_tag(current_user.avatar_url(size:20), :width => 20) %>
    <%= current_user.username %>
    <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <% if can? :access, Ability::FactlinkWebapp %>
      <li><%= link_to("<i class='icon-home'></i>&nbsp;#{t(:my_profile).capitalize}".html_safe, user_profile_path(current_user)) %></li>
    <% end %>
    <li><%= link_to("<i class='icon-cog'></i>&nbsp;Settings".html_safe, edit_user_path(current_user)) %></li>
    <% if can? :invite, User %>
      <li><%= link_to("<i class='icon-user'></i>&nbsp;Invites (#{current_user.invitation_limit})".html_safe, new_user_invitation_path) %></li>
    <% end %>
    <li><%= link_to("<i class='icon-off'></i>&nbsp;Sign out".html_safe, destroy_user_session_path) %></li>
  </ul>
</li>
