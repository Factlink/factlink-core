<%= content_for :javascript do %>
<script>
function twipper() {
  $('#channel-listing > li:first').twipsy({
    live: true,
    placement: 'right',
    title: function() { return "All Factlinks you've created or follow in your channels." },
  });

  $('#channel-listing > li:eq(1)').twipsy({
    live: true,
    placement: 'right',
    title: function() { return "All Factlinks you've created." },
  });

  $('.add-channel').twipsy({
    live: true,
    placement: 'right',
    title: function() { return "You can categorize Factlinks withins channels. Really interesting for other users to follow!" },
  });
}
twipper();
</script>
<% end %>