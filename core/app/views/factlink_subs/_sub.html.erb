<li data-score="<%= factlink_sub.score %>" id="fl-source-<%= factlink_sub.id %>">
	
	<div class="fl-vote-container">
		<%= link_to '<span class="fl-source-up"></span>'.html_safe, factlink_sub_vote_up_path(factlink_sub), :remote => true, :onclick => "return false; /(\\s|^)disabled(\\s|$)/.test(this.className)", :class => "up" %>
		<%= link_to '<span class="fl-source-down"></span>'.html_safe, factlink_sub_vote_down_path(factlink_sub), :remote => true, :onclick => "return false; /(\\s|^)disabled(\\s|$)/.test(this.className)", :class => "down" %>
		<span id="fl-source-score-<%= factlink_sub.id %>" class="fl-source-score"><%= factlink_sub.score %></span>
	</div>

	<span class="fl-statement-title"><%= factlink_sub.title %></span>
	<p><%= factlink_sub.content %></p>
	<hr>
	
	<div class="fl-source-information">
		<span class="fl-source-created-by">by <%= link_to_function("#{factlink_sub.created_by.username},", "alert(\"Later on, this will open the user profile of #{current_user}\")" ) %></span>
		<span class="fl-source">found on <a href="javascript:window.open('<%= factlink_sub.url %>');"><%= factlink_sub.url %></a></span>
	</div>
</li>