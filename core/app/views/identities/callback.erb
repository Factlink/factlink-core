<% content_for :specific_javascript do %>
  <script>
    if(window.opener) {
      var evt = document.createEvent('CustomEvent');
      evt.initCustomEvent('<%= @event %>', true, true, '<%= @provider_name %>');

      window.opener.document.dispatchEvent(evt);
      window.close();
    } else {
    origin = '<%= request.env['omniauth.origin'] %>'
      if(origin !== ''){
        console.info(origin);
        window.location = origin;
      }
    }
  </script>
<% end %>

<% content_for :specific_stylesheet_tag do %>
  <style>
    body {
      margin-top: 0px;
      min-width: 640px;
    }
  </style>
<% end %>

<% content_for :title do %>
