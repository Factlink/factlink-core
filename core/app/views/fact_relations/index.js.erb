var fact =  $("div.fact-block[data-fact-id=<%=@fact.id%>]");
var evidenceList = fact.find('.evidence-list ul');

evidenceList.empty();

<% @evidence.each do |evidence| %>
  evidenceList.append("<%= escape_javascript(render('/facts/partial/evidence_bubble', fact_relation: evidence )) %>").factlink();
<% end %>