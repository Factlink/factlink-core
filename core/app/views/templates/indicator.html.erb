<div class="fl-popup" style="display:none">

  <div class="fl-label">
    <span>Show</span>

    <div class="fl-indication">
      <span class="fl-authority">{%= opinions.authority %}</span>
      <div class="fl-indicator-icon">
        <%= image_tag(image_url("/system/wheel/{%= opinions.believe.percentage %}-{%= opinions.doubt.percentage %}-{%= opinions.disbelieve.percentage %}.png".html_safe)) %>
      </div>
    </div>
  </div>

  <div class="fl-arrow fl-arrow-bottom"></div>
</div>
