window.Factlink ||= {}

Factlink.Global =
  path:
    homepage: '/'
    sign_in: '/users/sign_in'
    sign_in_client: ->
      return_to = encodeURIComponent('<%= FactlinkUI::Application.config.core_url %>/' + Backbone.history.fragment)
      '/users/sign_in?layout=client&return_to=' + return_to
  brain_image: '<%= image_path("brain.png") %>'
  ajax_loader_image: '<%= image_path("ajax-loader.gif") %>'
  icon_empty_channel: '<%= image_path("icon-empty-channel.png") %>'
  icon_empty_channel_chrome: '<%= image_path("icon-client-chrome.png") %>'
  icon_empty_channel_firefox: '<%= image_path("icon-client-firefox.png") %>'
  conversations_bigger_image: '<%= image_path("conversations/conversations-bigger.png") %>'
  empty_factlink_image: '<%= image_path("conversations/factlink-empty-state.png") %>'
  browser_icons_chrome_16x16: '<%= image_path("browser-icons/chrome-16x16.png") %>'
  browser_icons_firefox_16x16: '<%= image_path("browser-icons/firefox-16x16.png") %>'
  opinion_animation: '<%= image_path("tour/opinion-animation.gif") %>'
  warning_sign_image: '<%= image_path("warning-sign.png") %>'

  firefox_extension_url: "<%= FactlinkUI::Application.config.static_url + '/extension/firefox/factlink-latest.xpi' %>"
  chrome_extension_url: "<%= FactlinkUI::Application.config.static_url + '/chrome/factlink-latest.crx' %>"
  use_chrome_webstore: <%= FactlinkUI::Application.config.use_chrome_webstore %>
  t: {}
  can_haz: {}
  signed_in: false

<%
  [
    :stream,
    :channel,
    :channels,
    :created_user_topic,
    :add_to_topics,
    :follow,
    :follow_user,
    :follow_topic,
    :followed,
    :following,
    :unfollow,
    :is_now_following_you,
    :topic,
    :topics,
    :topic_name,
    :favourites,
    :favourite,
    :unfavourite,
    :favourited,
    :fact_believe_opinion,
    :fact_doubt_opinion,
    :fact_disbelieve_opinion,

    :fact_believe_present_singular_action,
    :fact_disbelieve_present_singular_action,
    :fact_doubt_present_singular_action,

    :fact_believe_present_plural_action,
    :fact_disbelieve_present_plural_action,
    :fact_doubt_present_plural_action,

    :fact_believe_past_singular_action,
    :fact_disbelieve_past_singular_action,
    :fact_doubt_past_singular_action,

    :fact_believe_past_singular_second_person_action,
    :fact_disbelieve_past_singular_second_person_action,
    :fact_doubt_past_singular_second_person_action,

    :fact_believe_past_plural_action,
    :fact_disbelieve_past_plural_action,
    :fact_doubt_past_plural_action,

    :fact_believe_collection_name,
    :fact_disbelieve_collection_name,
    :fact_doubt_collection_name,

    :post_comment,

    :ago,
    :you,
    :nobody
  ].each do |translation|
%>

Factlink.Global.t.<%= translation.to_s %> = "<%= I18n.t(translation) %>"

<% end %>


<% if FactlinkUI::Application.config.chrome_extension_id %>
Factlink.Global.chrome_extension_id = "<%= FactlinkUI::Application.config.chrome_extension_id %>"
<% end %>

Factlink.Timeout =
  stream_refresh: 10*1000

Factlink.allowFeatures = (list = [])->
  Factlink.Global.can_haz[feature] = true for feature in list

Factlink.setSignedIn = (signed_in) ->
  Factlink.Global.signed_in = signed_in
