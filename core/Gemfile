gem 'ohm', github: 'Factlink/ohm' # we need the tribalvibes fork (0.1.4), for polymorphism
gem 'redis-objects', '~> 0.5.3' # cannot be upgraded to 0.6 until we update redis to 3.0 or bigger
gem 'multi_json', '~> 1.7'

# We should upgrade this to at least the latest 1.* version,
# but 1.23.1 has a breaking change, and 1.24+ requires a redis-namespace
# which requires redis > 3.0
gem 'resque', '= 1.23.0', require: 'resque/server'
