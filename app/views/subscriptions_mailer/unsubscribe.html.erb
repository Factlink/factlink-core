<% content_for :email_header do %>
  <h1 class="header-title">Hello <%= @user.full_name %></h1>
  <h2 class="header-subtitle">You have been unsubscribed from <%= t(@type, scope: 'mail_subscriptions') %> emails</h2>
<% end %>

<% content_for :email_body do %>

  <table class="button" align="center" border="0" cellpadding="0" cellspacing="0">
    <tr>
      <td class="button-inner">
        <%= link_to subscribe_url(@user.notification_settings_edit_token, @type) do %>
          <div class="button-link">
            Subscribe again
          </div>
        <% end %>
      </td>
    </tr>
  </table>
  <br /><br />
  <p align="center"><%= link_to 'Unsubscribe from all emails', unsubscribe_url(@user.notification_settings_edit_token, :all) %></p>

<% end %>

<%= render template: "layouts/email" %>
