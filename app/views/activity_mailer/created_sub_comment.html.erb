<% content_for :email_header do %>
  <h1 class="header-title">Hello <%= @user.full_name %></h1>
  <h2 class="header-subtitle"><%= @activity[:user].name %> has replied to a comment</h2>
<% end %>

<table cellpadding="0" cellspacing="0" border="0" id="added-comment-message">
  <tr>
    <td colspan="3" class="added-comment-message-header">
      <h3>
        <%= link_to @activity[:fact].proxy_open_url, class: "message-title" do %>
          <%= @activity[:fact].displaystring %>
        <% end %>
      </h3>
    </td>
  </tr>
  <tr>
    <td class="added-comment-message-container is-inactive" rowspan="3">
      <table cellpadding="0" cellspacing="0" border="0" class="added-comment-message-box">
        <tr>
          <td valign="top" class="message-user-image">
            <img src="<%= @activity[:comment].created_by.avatar_url.fill_in(32) %>" width="32" height="32" alt="<%= @activity[:comment].created_by.name %>" />
            <%= link_to_possibly_dead_user(@activity[:comment].created_by, class: "user-name") %>
          </td>
        </tr>
        <tr>
          <td class="added-comment-message-content">
            <p>
              <%= @activity[:comment].formatted_content %>
            </p>
          </td>
        </tr>
      </table>
      <table cellpadding="0" cellspacing="0" border="0" width="100%">
        <tr>
          <td class="subcomment-container-padding">
            <table cellpadding="0" cellspacing="0" border="0" class="subcomment-container">
              <tr>
                <td valign="top" class="message-user-image">
                  <img src="<%= @activity[:user].avatar_url.fill_in(24) %>" width="24" height="24" alt="<%= @activity[:user].name %>" />
                  <%= link_to_possibly_dead_user(@activity[:user], class: "user-name subcomment-user-name") %>
                </td>
              </tr>
              <tr>
                <td class="added-subcomment-message-content">
                  <p><%= @activity[:sub_comment].formatted_content %></p>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<br /><br />

<table class="button" align="center" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td class="button-inner">
      <%= link_to @activity[:fact].proxy_open_url do %>
        <div class="button-link">
          Reply to this comment
        </div>
      <% end %>
    </td>
  </tr>
</table>

<br /><br />
